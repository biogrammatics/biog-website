<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Test Twilio SMS Integration</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <% if flash[:notice] %>
      <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Credentials Check -->
    <%
      account_sid = Rails.application.credentials.dig(:twilio, :account_sid)
      auth_token = Rails.application.credentials.dig(:twilio, :auth_token)
      phone_number = Rails.application.credentials.dig(:twilio, :phone_number)
    %>

    <div class="mb-6 p-4 bg-gray-50 rounded">
      <h3 class="font-semibold mb-2">Twilio Configuration Status:</h3>
      <ul class="text-sm space-y-1">
        <li><%= account_sid.present? ? "✅" : "❌" %> Account SID:
          <%= account_sid.present? ? "#{account_sid[0..10]}..." : "Missing" %>
        </li>
        <li><%= auth_token.present? ? "✅" : "❌" %> Auth Token:
          <%= auth_token.present? ? "Present" : "Missing" %>
        </li>
        <li><%= phone_number.present? ? "✅" : "❌" %> Phone Number:
          <%= phone_number.present? ? phone_number : "Missing" %>
        </li>
      </ul>
    </div>

    <% if account_sid.present? && auth_token.present? && phone_number.present? %>
      <p class="text-gray-600 mb-6">Enter a phone number to send a test SMS verification code:</p>

      <%= form_with url: admin_send_test_sms_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.telephone_field :phone_number,
                               placeholder: "+1234567890 or 1234567890",
                               class: "w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500",
                               required: true %>
          <p class="text-xs text-gray-500 mt-1">Format: +1234567890 or 1234567890 (US numbers)</p>
        </div>

        <div class="flex justify-between items-center">
          <%= f.submit "Send Test SMS",
                      class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition cursor-pointer",
                      style: "background-color: #2563eb; color: white; padding: 12px 24px; border-radius: 6px; border: none; cursor: pointer;" %>
          <%= link_to "Back to Dashboard", admin_root_path,
                      class: "text-gray-600 hover:underline" %>
        </div>
      <% end %>
    <% else %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-6">
        <strong>Twilio credentials are not properly configured.</strong>
        <br>Please ensure all credentials are added to Rails credentials.
      </div>

      <div class="text-center">
        <%= link_to "Back to Dashboard", admin_root_path,
                    class: "text-gray-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>