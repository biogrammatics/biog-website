<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @pichia_strain.name %></h1>
  <div>
    <%= link_to "Edit Strain", edit_admin_pichia_strain_path(@pichia_strain), class: "btn btn-primary" %>
    <%= link_to "← Back to Strains", admin_pichia_strains_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Strain Details</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Name:</strong> <%= @pichia_strain.name %></p>
            <p><strong>Strain Type:</strong> <%= @pichia_strain.strain_type&.name || "Not specified" %></p>
            <p><strong>Genotype:</strong> <%= @pichia_strain.genotype || "Not specified" %></p>
            <p><strong>Phenotype:</strong> <%= @pichia_strain.phenotype || "Not specified" %></p>
          </div>
          
          <div class="col-md-6">
            <p><strong>Sale Price:</strong> <%= @pichia_strain.sale_price ? "$#{@pichia_strain.sale_price}" : "Not specified" %></p>
            <p><strong>Availability:</strong> 
              <span class="badge <%= @pichia_strain.availability == 'In Stock' ? 'bg-success' : 'bg-warning' %>">
                <%= @pichia_strain.availability || "Unknown" %>
              </span>
            </p>
            <p><strong>Has Files:</strong> 
              <span class="badge <%= @pichia_strain.has_files? ? 'bg-success' : 'bg-secondary' %>">
                <%= @pichia_strain.has_files? ? 'Yes' : 'No' %>
              </span>
            </p>
          </div>
        </div>
        
        <% if @pichia_strain.description.present? %>
          <hr>
          <h5>Description</h5>
          <p><%= simple_format(@pichia_strain.description) %></p>
        <% end %>
        
        <% if @pichia_strain.advantages.present? %>
          <hr>
          <h5>Advantages</h5>
          <p><%= simple_format(@pichia_strain.advantages) %></p>
        <% end %>
        
        <% if @pichia_strain.applications.present? %>
          <hr>
          <h5>Applications</h5>
          <p><%= simple_format(@pichia_strain.applications) %></p>
        <% end %>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h3>Culture & Storage Information</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <% if @pichia_strain.culture_media.present? %>
              <p><strong>Culture Media:</strong> <%= @pichia_strain.culture_media %></p>
            <% end %>
            <% if @pichia_strain.growth_conditions.present? %>
              <p><strong>Growth Conditions:</strong> <%= @pichia_strain.growth_conditions %></p>
            <% end %>
            <% if @pichia_strain.viability_period.present? %>
              <p><strong>Viability Period:</strong> <%= @pichia_strain.viability_period %></p>
            <% end %>
          </div>
          <div class="col-md-6">
            <% if @pichia_strain.storage_conditions.present? %>
              <p><strong>Storage Conditions:</strong> <%= @pichia_strain.storage_conditions %></p>
            <% end %>
            <% if @pichia_strain.shipping_requirements.present? %>
              <p><strong>Shipping Requirements:</strong> <%= @pichia_strain.shipping_requirements %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <% if @pichia_strain.citations.present? %>
      <div class="card mb-4">
        <div class="card-header">
          <h3>Citations</h3>
        </div>
        <div class="card-body">
          <p><%= simple_format(@pichia_strain.citations) %></p>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Status</h3>
      </div>
      <div class="card-body">
        <p><strong>Product Status:</strong> 
          <span class="badge <%= @pichia_strain.available? ? 'bg-success' : 'bg-warning' %>">
            <%= @pichia_strain.product_status&.name || "Unknown" %>
          </span>
        </p>
        
        <% if @pichia_strain.file_notes.present? %>
          <hr>
          <p><strong>File Notes:</strong></p>
          <p class="text-muted"><%= simple_format(@pichia_strain.file_notes) %></p>
        <% end %>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <h4>Admin Actions</h4>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to "Edit Strain", edit_admin_pichia_strain_path(@pichia_strain), class: "btn btn-primary" %>
          <%= link_to "View Public Page", pichia_strain_path(@pichia_strain), class: "btn btn-outline-info", target: "_blank" %>
          <%= link_to "Delete Strain", admin_pichia_strain_path(@pichia_strain), 
                      method: :delete, 
                      class: "btn btn-outline-danger",
                      confirm: "Are you sure you want to delete this strain? This action cannot be undone.",
                      data: { turbo_method: :delete } %>
        </div>
      </div>
    </div>
  </div>
</div>
