<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Manage Vectors</h1>
  <%= link_to "Add New Vector", new_admin_vector_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
</div>

<div class="bg-white shadow-sm rounded-lg">
  <div class="p-6">
    <% if @vectors.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Promoter</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Version</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purchases</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sale Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @vectors.each do |vector| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= vector.name %>
                  <% if vector.has_been_purchased? %>
                    <svg class="inline-block w-4 h-4 text-gray-400 ml-1" fill="currentColor" viewBox="0 0 20 20" title="Protected - has purchases">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= vector.vector_type&.name || "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= vector.promoter&.name || "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if vector.file_version.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">v<%= vector.file_version %></span>
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if vector.purchase_count > 0 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= vector.purchase_count %></span>
                  <% else %>
                    <span class="text-gray-500">0</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= vector.sale_price ? "$#{vector.sale_price}" : "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= vector.available? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= vector.product_status&.name || "Unknown" %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", admin_vector_path(vector), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "Edit", edit_admin_vector_path(vector), class: "text-gray-600 hover:text-gray-900" %>
                    <% if vector.can_be_deleted? %>
                      <%= button_to "Delete", admin_vector_path(vector), method: :delete,
                                  class: "text-red-600 hover:text-red-900",
                                  form: { data: { turbo_confirm: "Are you sure you want to delete this vector?" } } %>
                    <% else %>
                      <button class="text-gray-400 cursor-not-allowed" disabled title="Cannot delete - has purchases">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                      </button>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No vectors found. <%= link_to "Add the first vector", new_admin_vector_path, class: "text-blue-600 hover:text-blue-900" %>.</p>
    <% end %>
  </div>
</div>
