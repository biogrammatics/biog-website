<%= form_with model: [:admin, @vector], local: true, html: { multipart: true, class: "space-y-6" } do |form| %>
  <% if @vector.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(@vector.errors.count, "error") %> prohibited this vector from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @vector.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Basic Information</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <span class="text-red-600">*</span>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:name].any?} #{'border-gray-300' unless @vector.errors[:name].any?}", required: true %>
        <% if @vector.errors[:name].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:name].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :category,
            options_for_select([
              ['Heterologous Protein Expression', 'Heterologous Protein Expression'],
              ['Genome Engineering', 'Genome Engineering']
            ], @vector.category),
            { prompt: "Select category..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:category].any?} #{'border-gray-300' unless @vector.errors[:category].any?}" } %>
        <p class="mt-1 text-xs text-gray-500">Will default to "Heterologous Protein Expression" if not selected</p>
        <% if @vector.errors[:category].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:category].first %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:description].any?} #{'border-gray-300' unless @vector.errors[:description].any?}" %>
      <% if @vector.errors[:description].any? %>
        <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:description].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Technical Details -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Technical Details</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <%= form.label :promoter_id, "Promoter", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :promoter_id, @promoters, :id, :name,
            { prompt: "Select promoter..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:promoter_id].any?} #{'border-gray-300' unless @vector.errors[:promoter_id].any?}" } %>
        <% if @vector.errors[:promoter_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:promoter_id].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :selection_marker_id, "Selection Marker", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :selection_marker_id, @selection_markers, :id, :name,
            { prompt: "Select marker..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:selection_marker_id].any?} #{'border-gray-300' unless @vector.errors[:selection_marker_id].any?}" } %>
        <% if @vector.errors[:selection_marker_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:selection_marker_id].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :vector_type_id, "Vector Type", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :vector_type_id, @vector_types, :id, :name,
            { prompt: "Select type..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:vector_type_id].any?} #{'border-gray-300' unless @vector.errors[:vector_type_id].any?}" } %>
        <% if @vector.errors[:vector_type_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:vector_type_id].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :host_organism_id, "Host Organism", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :host_organism_id, @host_organisms, :id, :common_name,
            { prompt: "Select host..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:host_organism_id].any?} #{'border-gray-300' unless @vector.errors[:host_organism_id].any?}" } %>
        <% if @vector.errors[:host_organism_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:host_organism_id].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :vector_size, "Vector Size (bp)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :vector_size, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:vector_size].any?} #{'border-gray-300' unless @vector.errors[:vector_size].any?}" %>
        <% if @vector.errors[:vector_size].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:vector_size].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :file_version, "Version", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :file_version, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:file_version].any?} #{'border-gray-300' unless @vector.errors[:file_version].any?}", placeholder: "e.g., 1.0, 2.0, 2.1" %>
        <p class="mt-1 text-xs text-gray-500">
          <% if @vector.persisted? && @vector.has_been_purchased? %>
            <svg class="inline-block w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            Consider incrementing when making significant changes
          <% else %>
            Version number for tracking updates
          <% end %>
        </p>
        <% if @vector.errors[:file_version].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:file_version].first %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.label :features, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :features, rows: 3, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:features].any?} #{'border-gray-300' unless @vector.errors[:features].any?}", placeholder: "Comma-separated list of features (e.g., AOX1 promoter, Zeocin resistance, multiple cloning site)" %>
      <p class="mt-1 text-xs text-gray-500">Describe key features, separated by commas</p>
      <% if @vector.errors[:features].any? %>
        <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:features].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Product Status -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Product Status</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :product_status_id, "Product Status", class: "block text-sm font-medium text-gray-700" %>
        <span class="text-red-600">*</span>
        <%= form.collection_select :product_status_id, @product_statuses, :id, :name,
            { prompt: "Select status..." },
            { class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:product_status_id].any?} #{'border-gray-300' unless @vector.errors[:product_status_id].any?}", required: true } %>
        <% if @vector.errors[:product_status_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:product_status_id].first %></p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Options</label>
        <div class="space-y-2">
          <div class="flex items-center">
            <%= form.check_box :has_lox_sites, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= form.label :has_lox_sites, "Has Lox Sites", class: "ml-2 text-sm text-gray-700" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :has_files, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= form.label :has_files, "Has Files Available", class: "ml-2 text-sm text-gray-700" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Availability & Pricing -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Availability & Pricing</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div class="space-y-3">
        <div class="flex items-center">
          <%= form.check_box :available_for_sale, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", id: "available_for_sale_check" %>
          <%= form.label :available_for_sale, "Available for Sale", class: "ml-2 text-sm font-medium text-gray-700" %>
        </div>
        <div class="flex items-center">
          <%= form.check_box :available_for_subscription, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", id: "available_for_subscription_check" %>
          <%= form.label :available_for_subscription, "Available for Subscription", class: "ml-2 text-sm font-medium text-gray-700" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :sale_price, "Sale Price ($)", class: "block text-sm font-medium text-gray-700" %>
        <span class="text-red-600" id="sale_price_required" style="<%= 'display: none;' unless @vector.available_for_sale? %>">*</span>
        <%= form.number_field :sale_price, step: 0.01, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:sale_price].any?} #{'border-gray-300' unless @vector.errors[:sale_price].any?}", id: "sale_price_field" %>
        <p class="mt-1 text-xs text-gray-500">Required when "Available for Sale" is checked</p>
        <% if @vector.errors[:sale_price].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:sale_price].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :subscription_price, "Annual Subscription Price ($)", class: "block text-sm font-medium text-gray-700" %>
        <span class="text-red-600" id="subscription_price_required" style="<%= 'display: none;' unless @vector.available_for_subscription? %>">*</span>
        <%= form.number_field :subscription_price, step: 0.01, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @vector.errors[:subscription_price].any?} #{'border-gray-300' unless @vector.errors[:subscription_price].any?}", id: "subscription_price_field" %>
        <p class="mt-1 text-xs text-gray-500">Required when "Available for Subscription" is checked</p>
        <% if @vector.errors[:subscription_price].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:subscription_price].first %></p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Vector Map Image -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Vector Map Image</h3>

    <div>
      <%= form.label :map_image, "Vector Map Image", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :map_image, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 #{'border-red-300' if @vector.errors[:map_image].any?}", accept: "image/jpeg,image/png,image/webp,image/avif" %>
      <p class="mt-1 text-xs text-gray-500">Upload a high-resolution vector map (JPG, PNG, WebP, or AVIF)</p>
      <% if @vector.errors[:map_image].any? %>
        <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:map_image].first %></p>
      <% end %>

      <% if @vector.persisted? && @vector.map_image.attached? %>
        <div class="mt-4">
          <h6 class="text-sm font-medium text-gray-700 mb-2">Current Map:</h6>
          <div class="border border-gray-200 rounded-lg overflow-hidden" style="max-width: 300px;">
            <% begin %>
              <%= image_tag @vector.map_image, class: "w-full", style: "max-height: 200px; object-fit: contain;" %>
            <% rescue => e %>
              <div class="text-center py-8 bg-gray-50">
                <svg class="mx-auto h-12 w-12 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                <p class="text-sm text-gray-500 mt-2">Image file not found</p>
              </div>
            <% end %>
            <div class="px-4 py-3 bg-gray-50">
              <p class="text-xs text-gray-500">
                <%= @vector.map_image.filename %>
                (<%= number_to_human_size(@vector.map_image.byte_size) %>)
              </p>
              <%= link_to "Remove", remove_map_admin_vector_path(@vector),
                          method: :delete,
                          data: { turbo_method: :delete, turbo_confirm: "Remove vector map?" },
                          class: "mt-2 inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- File Attachments -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">File Attachments</h3>

    <div>
      <%= form.label :files, "Upload SnapGene/GenBank Files", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :files, multiple: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 #{'border-red-300' if @vector.errors[:files].any?}", accept: ".dna,.gb,.gbk" %>
      <div class="mt-1 text-xs text-gray-500">
        <% if @vector.persisted? %>
          <p class="font-medium">Add new files:</p>
          <p>Accepted formats: .dna (SnapGene), .gb, .gbk (GenBank)</p>
          <p class="mt-1 flex items-start">
            <svg class="w-4 h-4 text-blue-500 mr-1 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <span>New files will be added to existing ones. Use "Remove" buttons below to delete individual files.</span>
          </p>
        <% else %>
          <p>Accepted formats: .dna (SnapGene), .gb, .gbk (GenBank)</p>
        <% end %>
      </div>
      <% if @vector.errors[:files].any? %>
        <p class="mt-2 text-sm text-red-600"><%= @vector.errors[:files].first %></p>
      <% end %>

      <% if @vector.persisted? && @vector.files.attached? %>
        <div class="mt-4">
          <h6 class="text-sm font-medium text-gray-700 mb-2">Current Files:</h6>
          <ul class="divide-y divide-gray-200 border border-gray-200 rounded-md">
            <% @vector.files.each do |file| %>
              <li class="px-4 py-3 flex justify-between items-center">
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-900"><%= file.filename %></span>
                  <span class="text-xs text-gray-500 ml-2">(<%= number_to_human_size(file.byte_size) %>)</span>
                </div>
                <%= link_to "Remove", remove_file_admin_vector_path(@vector, file_id: file.id),
                            method: :delete,
                            data: { turbo_method: :delete, turbo_confirm: "Remove this file?" },
                            class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <div class="flex items-center justify-between">
      <div class="flex space-x-3">
        <%= form.submit @vector.persisted? ? "Update Vector" : "Create Vector", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        <%= link_to "Cancel", @vector.persisted? ? admin_vector_path(@vector) : admin_vectors_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
      <div>
        <p class="text-xs text-gray-500">
          <span class="text-red-600">*</span> Required fields
        </p>
      </div>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const saleCheckbox = document.getElementById('available_for_sale_check');
  const subscriptionCheckbox = document.getElementById('available_for_subscription_check');
  const salePriceField = document.getElementById('sale_price_field');
  const subscriptionPriceField = document.getElementById('subscription_price_field');
  const salePriceRequired = document.getElementById('sale_price_required');
  const subscriptionPriceRequired = document.getElementById('subscription_price_required');

  function updatePriceFields() {
    // Handle sale price
    if (saleCheckbox && saleCheckbox.checked) {
      salePriceField.required = true;
      salePriceRequired.style.display = 'inline';
    } else {
      salePriceField.required = false;
      salePriceRequired.style.display = 'none';
    }

    // Handle subscription price
    if (subscriptionCheckbox && subscriptionCheckbox.checked) {
      subscriptionPriceField.required = true;
      subscriptionPriceRequired.style.display = 'inline';
    } else {
      subscriptionPriceField.required = false;
      subscriptionPriceRequired.style.display = 'none';
    }
  }

  // Initial setup
  updatePriceFields();

  // Add event listeners
  if (saleCheckbox) {
    saleCheckbox.addEventListener('change', updatePriceFields);
  }
  if (subscriptionCheckbox) {
    subscriptionCheckbox.addEventListener('change', updatePriceFields);
  }
});
</script>