<div class="container-custom py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-charcoal"><%= @pichia_strain.name %></h1>
    <%= link_to pichia_strains_path, class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
      <i class="bi bi-arrow-left"></i>
      Back to Strains
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <!-- Strain Details -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Strain Details</h3>
        </div>
        <div class="p-6">
          <p class="text-lg text-gray-700 mb-6"><%= @pichia_strain.description %></p>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h5 class="text-base font-semibold text-charcoal mb-4 pb-2 border-b border-gray-200">Genetic Information</h5>
              <div class="space-y-3">
                <div>
                  <p class="text-sm font-medium text-gray-600">Genotype</p>
                  <p class="text-gray-900"><%= @pichia_strain.genotype || "Not specified" %></p>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Phenotype</p>
                  <p class="text-gray-900"><%= @pichia_strain.phenotype || "Not specified" %></p>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Strain Type</p>
                  <p class="text-gray-900"><%= @pichia_strain.strain_type&.name || "Not specified" %></p>
                </div>
              </div>
            </div>

            <div>
              <h5 class="text-base font-semibold text-charcoal mb-4 pb-2 border-b border-gray-200">Applications</h5>
              <% if @pichia_strain.applications.present? %>
                <div class="text-gray-700 text-sm"><%= simple_format(@pichia_strain.applications) %></div>
              <% else %>
                <p class="text-gray-500 text-sm">No specific applications listed.</p>
              <% end %>

              <% if @pichia_strain.advantages.present? %>
                <div class="mt-4">
                  <h6 class="text-sm font-semibold text-charcoal mb-2">Advantages</h6>
                  <div class="text-gray-700 text-sm"><%= simple_format(@pichia_strain.advantages) %></div>
                </div>
              <% end %>
            </div>
          </div>

          <% if @pichia_strain.citations.present? %>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h5 class="text-base font-semibold text-charcoal mb-3">Citations</h5>
              <div class="text-gray-700 text-sm"><%= simple_format(@pichia_strain.citations) %></div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Culture Conditions -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Culture Conditions</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <div>
                <p class="text-sm font-medium text-gray-600">Culture Media</p>
                <p class="text-gray-900"><%= @pichia_strain.culture_media || "Not specified" %></p>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600">Growth Conditions</p>
                <p class="text-gray-900"><%= @pichia_strain.growth_conditions || "Not specified" %></p>
              </div>
            </div>

            <div class="space-y-3">
              <div>
                <p class="text-sm font-medium text-gray-600">Storage Conditions</p>
                <p class="text-gray-900"><%= @pichia_strain.storage_conditions || "Not specified" %></p>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600">Viability Period</p>
                <p class="text-gray-900"><%= @pichia_strain.viability_period || "Not specified" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Ordering Information -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden sticky top-20">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Ordering Information</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="text-center">
            <p class="text-3xl font-bold text-bio-green">$<%= @pichia_strain.sale_price %></p>
          </div>

          <div class="flex items-center justify-between py-3 border-t border-b border-gray-200">
            <span class="text-sm font-medium text-gray-600">Availability:</span>
            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium <%= @pichia_strain.availability == 'In Stock' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
              <%= @pichia_strain.availability || "Unknown" %>
            </span>
          </div>

          <% if @pichia_strain.shipping_requirements.present? %>
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1">Shipping Requirements</p>
              <p class="text-sm text-gray-700"><%= @pichia_strain.shipping_requirements %></p>
            </div>
          <% end %>

          <% if @pichia_strain.file_notes.present? %>
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1">Notes</p>
              <p class="text-sm text-gray-700"><%= @pichia_strain.file_notes %></p>
            </div>
          <% end %>

          <div class="space-y-3 pt-4">
            <% if authenticated? %>
              <%= button_to "Add to Cart", add_item_cart_path,
                  params: { item_type: 'PichiaStrain', item_id: @pichia_strain.id, quantity: 1 },
                  method: :post,
                  class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-bio-green text-white font-semibold rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg" %>
            <% else %>
              <%= link_to "Sign In to Purchase", new_session_path, class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-bio-green text-white font-semibold rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg" %>
            <% end %>

            <button class="w-full px-6 py-3 border border-gray-300 text-gray-500 font-medium rounded-lg cursor-not-allowed" disabled>
              <span class="block">Request Quote</span>
              <span class="text-xs">Coming Soon</span>
            </button>
          </div>

          <p class="text-xs text-gray-500 pt-3 border-t border-gray-200">
            Authentication required for purchasing
          </p>
        </div>
      </div>

      <!-- Need Help -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h4 class="text-base font-semibold text-charcoal">Need Help?</h4>
        </div>
        <div class="p-6">
          <p class="text-sm text-gray-600 mb-3">Questions about this strain or need technical support?</p>
          <button class="w-full px-4 py-2 border border-gray-300 text-gray-500 text-sm font-medium rounded-lg cursor-not-allowed" disabled>
            Contact Support
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
