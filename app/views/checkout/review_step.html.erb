<div class="container-custom py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <!-- Progress Bar -->
      <div class="mb-8">
        <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
          <div class="bg-bio-green h-2 rounded-full transition-all duration-500" style="width: 100%"></div>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-green-600 font-medium"><i class="bi bi-check-circle-fill"></i> Address</span>
          <span class="text-green-600 font-medium"><i class="bi bi-check-circle-fill"></i> Payment</span>
          <span class="text-bio-green font-semibold">3. Review & Place Order</span>
        </div>
      </div>

      <!-- Order Items Review -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Order Items</h3>
        </div>
        <div class="p-6 space-y-4">
          <% @cart.cart_items.each do |cart_item| %>
            <div class="flex items-center gap-4 pb-4 mb-4 border-b border-gray-200 last:border-b-0 last:pb-0 last:mb-0">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-lg bg-bio-green/10 flex items-center justify-center">
                  <i class="bi bi-diagram-3 text-xl text-bio-green"></i>
                </div>
              </div>
              <div class="flex-grow min-w-0">
                <h6 class="font-semibold text-charcoal mb-1"><%= cart_item.item_name %></h6>
                <p class="text-gray-600 text-sm"><%= cart_item.item_description %></p>
              </div>
              <div class="flex items-center gap-6 flex-shrink-0">
                <div class="text-center">
                  <span class="text-sm text-gray-500 block mb-1">Qty</span>
                  <span class="font-semibold text-charcoal"><%= cart_item.quantity %></span>
                </div>
                <div class="text-center">
                  <span class="text-sm text-gray-500 block mb-1">Price</span>
                  <span class="text-charcoal">$<%= cart_item.price %></span>
                </div>
                <div class="text-right min-w-[80px]">
                  <span class="text-sm text-gray-500 block mb-1">Total</span>
                  <span class="font-bold text-bio-green">$<%= cart_item.total_price %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Address Review -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Shipping & Billing Information</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <div class="flex items-center gap-2 mb-3 pb-2 border-b border-gray-200">
                <i class="bi bi-credit-card text-bio-green"></i>
                <h6 class="font-semibold text-charcoal">Billing Address</h6>
              </div>
              <address class="not-italic text-gray-700 text-sm leading-relaxed">
                <strong class="block mb-1 text-charcoal"><%= @billing_address.display_name %></strong>
                <%= simple_format(@billing_address.full_address, class: "mb-2") %>
                <div class="flex items-center gap-2 mt-2">
                  <i class="bi bi-telephone text-gray-400"></i>
                  <strong>Phone:</strong> <%= @billing_address.phone %>
                </div>
              </address>
            </div>
            <div>
              <div class="flex items-center gap-2 mb-3 pb-2 border-b border-gray-200">
                <i class="bi bi-truck text-bio-green"></i>
                <h6 class="font-semibold text-charcoal">Shipping Address</h6>
              </div>
              <address class="not-italic text-gray-700 text-sm leading-relaxed">
                <strong class="block mb-1 text-charcoal"><%= @shipping_address.display_name %></strong>
                <%= simple_format(@shipping_address.full_address, class: "mb-2") %>
                <div class="flex items-center gap-2 mt-2">
                  <i class="bi bi-telephone text-gray-400"></i>
                  <strong>Phone:</strong> <%= @shipping_address.phone %>
                </div>
              </address>
            </div>
          </div>

          <div class="mt-6 pt-4 border-t border-gray-200">
            <%= link_to address_step_checkout_index_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-bio-green hover:bg-bio-green/10 rounded-lg transition-colors" do %>
              <i class="bi bi-pencil"></i>
              Edit Addresses
            <% end %>
          </div>
        </div>
      </div>

      <!-- Order Totals -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Order Total</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="md:col-span-2">
              <div class="space-y-3">
                <div class="flex justify-between items-center py-2">
                  <span class="text-gray-600">Subtotal:</span>
                  <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:subtotal]) %></span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="text-gray-600">Shipping:</span>
                  <span>
                    <% if @order_summary[:shipping_cost] == 0 %>
                      <span class="font-semibold text-green-600">FREE</span>
                    <% else %>
                      <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:shipping_cost]) %></span>
                    <% end %>
                  </span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="text-gray-600">Tax (<%= sprintf("%.1f%%", @order_summary[:tax_rate] * 100) %>):</span>
                  <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:tax_amount]) %></span>
                </div>
                <div class="border-t border-gray-300 pt-3 mt-3">
                  <div class="flex justify-between items-center">
                    <strong class="text-lg text-charcoal">Total:</strong>
                    <strong class="text-2xl text-bio-green">$<%= sprintf("%.2f", @order_summary[:total]) %></strong>
                  </div>
                </div>
              </div>
            </div>
            <div class="md:col-span-1">
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <h6 class="font-semibold text-charcoal mb-3 flex items-center gap-2">
                  <i class="bi bi-truck text-bio-green"></i>
                  Shipping Details
                </h6>
                <div class="text-sm text-gray-700 space-y-2">
                  <% if @order_summary[:shipping_cost] == 0 %>
                    <p class="mb-2">
                      <strong class="text-green-600">Free Shipping!</strong><br>
                      <span class="text-gray-600">Orders over $150 ship free.</span>
                    </p>
                  <% else %>
                    <p class="mb-2">
                      Standard shipping to <%= @shipping_address.state %>
                      <% if %w[AK HI].include?(@shipping_address.state) %>
                        <br><span class="text-xs text-gray-500">Additional charge for AK/HI delivery</span>
                      <% end %>
                    </p>
                  <% end %>
                  <p class="text-xs text-gray-500 mb-0 flex items-center gap-1">
                    <i class="bi bi-clock"></i>
                    Estimated delivery: 5-7 business days
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Place Order -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="p-6">
          <%= form_with url: review_step_checkout_index_path, method: :post, local: true do |form| %>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
              <div class="flex gap-3">
                <div class="flex-shrink-0">
                  <i class="bi bi-info-circle text-blue-600 text-xl"></i>
                </div>
                <div>
                  <strong class="text-blue-900 block mb-1">Ready to place your order?</strong>
                  <p class="text-blue-800 text-sm mb-0">By clicking "Place Order" below, you agree to our terms and conditions. Your order will be processed and you'll receive a confirmation email.</p>
                </div>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-between items-center">
              <%= link_to payment_step_checkout_index_path, class: "inline-flex items-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors w-full sm:w-auto justify-center" do %>
                <i class="bi bi-arrow-left"></i>
                Back to Payment
              <% end %>
              <%= form.submit "Place Order", class: "inline-flex items-center gap-2 px-8 py-3 bg-bio-green text-white font-semibold text-lg rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg w-full sm:w-auto justify-center",
                  data: { turbo_confirm: "Are you sure you want to place this order for $#{sprintf('%.2f', @order_summary[:total])}?" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Order Summary Sidebar -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden sticky top-20">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal">Order Summary</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex justify-between items-center pb-3 border-b border-gray-200">
            <span class="text-gray-600">Items (<%= @cart.total_items %>):</span>
            <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:subtotal]) %></span>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-gray-200">
            <span class="text-gray-600">Shipping:</span>
            <span>
              <% if @order_summary[:shipping_cost] == 0 %>
                <span class="font-semibold text-green-600">FREE</span>
              <% else %>
                <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:shipping_cost]) %></span>
              <% end %>
            </span>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-gray-200">
            <span class="text-gray-600">Tax:</span>
            <span class="font-medium text-charcoal">$<%= sprintf("%.2f", @order_summary[:tax_amount]) %></span>
          </div>
          <div class="flex justify-between items-center pt-2">
            <strong class="text-lg text-charcoal">Total:</strong>
            <strong class="text-2xl text-bio-green">$<%= sprintf("%.2f", @order_summary[:total]) %></strong>
          </div>

          <div class="mt-4 pt-4 border-t border-gray-200">
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <i class="bi bi-shield-check text-bio-green text-lg"></i>
              <span>Your payment information is secure and encrypted</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>