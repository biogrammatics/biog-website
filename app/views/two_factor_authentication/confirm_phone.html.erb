<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Verify Your Phone Number</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="space-y-6">
      <div>
        <p class="text-gray-600 mb-4">
          We've sent a 6-digit verification code to <strong><%= @user.phone_number.gsub(/(\d{3})(\d{3})(\d{4})/, '(\1) \2-\3') %></strong>
        </p>

        <%= form_with url: two_factor_verify_phone_code_path, local: true do |f| %>
          <% if flash[:alert] %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-6">
            <%= f.label :otp_code, "Verification Code", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :otp_code,
                            placeholder: "000000",
                            maxlength: 6,
                            pattern: "[0-9]{6}",
                            inputmode: "numeric",
                            autocomplete: "one-time-code",
                            class: "w-full px-4 py-2 text-2xl text-center tracking-widest border rounded focus:outline-none focus:border-blue-500",
                            required: true,
                            autofocus: true %>
            <p class="text-sm text-gray-500 mt-2">
              Enter the 6-digit code from the text message
            </p>
          </div>

          <div class="flex justify-between items-center">
            <%= f.submit "Verify and Enable SMS Authentication", class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition cursor-pointer" %>
            <%= link_to "Cancel", two_factor_setup_path, class: "text-gray-600 hover:underline" %>
          </div>
        <% end %>
      </div>

      <div class="text-center text-gray-600">
        <p>Didn't receive the code?</p>
        <%= link_to "Try a different phone number", two_factor_enable_sms_path, class: "text-blue-600 hover:underline" %>
      </div>
    </div>
  </div>
</div>