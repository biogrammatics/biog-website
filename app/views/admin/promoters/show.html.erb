<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Promoter Details</h2>
        <div>
          <%= link_to "Edit", edit_admin_promoter_path(@promoter), class: "btn btn-primary btn-sm" %>
          <%= link_to "Back to Promoters", admin_promoters_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Name</dt>
          <dd class="col-sm-9"><%= @promoter.name %></dd>

          <dt class="col-sm-3">Full Name</dt>
          <dd class="col-sm-9"><%= @promoter.full_name.presence || "-" %></dd>

          <dt class="col-sm-3">Type</dt>
          <dd class="col-sm-9">
            <% if @promoter.inducible %>
              <span class="badge bg-warning">Inducible</span>
            <% else %>
              <span class="badge bg-info">Constitutive</span>
            <% end %>
          </dd>

          <dt class="col-sm-3">Strength</dt>
          <dd class="col-sm-9"><%= @promoter.strength.presence || "-" %></dd>
        </dl>

        <hr class="my-4">

        <h5>Vectors Using This Promoter</h5>
        <% if @promoter.vectors.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Vector Name</th>
                  <th>Category</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @promoter.vectors.includes(:product_status).each do |vector| %>
                  <tr>
                    <td><%= link_to vector.name, admin_vector_path(vector), class: "text-decoration-none" %></td>
                    <td><%= vector.category %></td>
                    <td>
                      <% if vector.product_status&.is_available? %>
                        <span class="badge bg-success">Active</span>
                      <% else %>
                        <span class="badge bg-secondary">Inactive</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No vectors are currently using this promoter.</p>
        <% end %>

        <% unless @promoter.vectors.any? %>
          <hr class="my-4">
          <div class="d-flex justify-content-end">
            <%= button_to "Delete Promoter", admin_promoter_path(@promoter), method: :delete, 
                data: { turbo_confirm: "Are you sure you want to delete this promoter?" }, 
                class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>