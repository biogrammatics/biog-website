<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @checkout %>
        <div class="alert alert-info">
          <h5 class="alert-heading">Account Required for Checkout</h5>
          <p>To complete your purchase, please sign in to your existing account or create a new one. Your cart items will be preserved.</p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <div class="row">
        <!-- Sign In Form -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h4>Sign In</h4>
            </div>
            <div class="card-body">
              <%= form_with url: session_path, local: true do |form| %>
                <% if @checkout %>
                  <%= form.hidden_field :checkout, value: true %>
                <% end %>
                
                <div class="mb-3">
                  <%= form.label :email_address, class: "form-label" %>
                  <%= form.email_field :email_address, 
                      required: true, 
                      autofocus: !@checkout,
                      autocomplete: "username", 
                      class: "form-control",
                      value: params[:email_address] %>
                </div>
                
                <div class="mb-3">
                  <%= form.label :password, class: "form-label" %>
                  <div class="input-group">
                    <%= form.password_field :password, 
                        required: true, 
                        autocomplete: "current-password", 
                        class: "form-control",
                        maxlength: 72,
                        id: "signin-password" %>
                    <button class="btn btn-outline-secondary" type="button" id="toggle-signin-password">
                      <i class="bi bi-eye" id="signin-password-icon"></i>
                    </button>
                  </div>
                </div>
                
                <div class="d-grid">
                  <%= form.submit "Sign In", class: "btn btn-primary" %>
                </div>
              <% end %>
              
              <div class="text-center mt-3">
                <%= link_to "Forgot password?", new_password_path, class: "text-decoration-none" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Create Account Form -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h4>Create Account</h4>
            </div>
            <div class="card-body">
              <%= form_with model: @user, url: session_path, local: true do |form| %>
                <% if @checkout %>
                  <%= form.hidden_field :checkout, value: true %>
                <% end %>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <%= form.label :first_name, class: "form-label" %>
                    <%= form.text_field :first_name, class: "form-control" %>
                  </div>
                  <div class="col-md-6 mb-3">
                    <%= form.label :last_name, class: "form-label" %>
                    <%= form.text_field :last_name, class: "form-control" %>
                  </div>
                </div>
                
                <div class="mb-3">
                  <%= form.label :email_address, class: "form-label" %>
                  <%= form.email_field :email_address, 
                      required: true,
                      class: "form-control #{'is-invalid' if @user.errors[:email_address].any?}" %>
                  <% if @user.errors[:email_address].any? %>
                    <div class="invalid-feedback">
                      <%= @user.errors[:email_address].first %>
                    </div>
                  <% end %>
                </div>
                
                <div class="mb-3">
                  <%= form.label :password, class: "form-label" %>
                  <div class="input-group">
                    <%= form.password_field :password, 
                        required: true,
                        class: "form-control #{'is-invalid' if @user.errors[:password].any?}",
                        autocomplete: "new-password",
                        id: "signup-password" %>
                    <button class="btn btn-outline-secondary" type="button" id="toggle-signup-password">
                      <i class="bi bi-eye" id="signup-password-icon"></i>
                    </button>
                    <% if @user.errors[:password].any? %>
                      <div class="invalid-feedback">
                        <%= @user.errors[:password].first %>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                <div class="mb-3">
                  <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
                  <div class="input-group">
                    <%= form.password_field :password_confirmation, 
                        required: true,
                        class: "form-control",
                        autocomplete: "new-password",
                        id: "signup-password-confirm" %>
                    <button class="btn btn-outline-secondary" type="button" id="toggle-signup-password-confirm">
                      <i class="bi bi-eye" id="signup-password-confirm-icon"></i>
                    </button>
                  </div>
                </div>
                
                <div class="d-grid">
                  <%= form.submit "Create Account", class: "btn btn-success" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <% unless @checkout %>
        <div class="text-center mt-4">
          <%= link_to "â† Back to Home", root_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Toggle sign-in password visibility
  const toggleSigninPassword = document.getElementById('toggle-signin-password');
  if (toggleSigninPassword) {
    toggleSigninPassword.addEventListener('click', function() {
      const passwordField = document.getElementById('signin-password');
      const icon = document.getElementById('signin-password-icon');
      
      if (passwordField.type === 'password') {
        passwordField.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
      } else {
        passwordField.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
      }
    });
  }
  
  // Toggle sign-up password visibility
  const toggleSignupPassword = document.getElementById('toggle-signup-password');
  if (toggleSignupPassword) {
    toggleSignupPassword.addEventListener('click', function() {
      const passwordField = document.getElementById('signup-password');
      const icon = document.getElementById('signup-password-icon');
      
      if (passwordField.type === 'password') {
        passwordField.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
      } else {
        passwordField.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
      }
    });
  }
  
  // Toggle sign-up password confirmation visibility
  const toggleSignupPasswordConfirm = document.getElementById('toggle-signup-password-confirm');
  if (toggleSignupPasswordConfirm) {
    toggleSignupPasswordConfirm.addEventListener('click', function() {
      const passwordField = document.getElementById('signup-password-confirm');
      const icon = document.getElementById('signup-password-confirm-icon');
      
      if (passwordField.type === 'password') {
        passwordField.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
      } else {
        passwordField.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
      }
    });
  }
});
</script>
