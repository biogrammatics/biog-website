<h1>Expression Vectors</h1>
<p class="lead">Browse our collection of high-quality molecular cloning vectors</p>

<div class="row">
  <% @vectors.each do |vector| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= vector.name %></h5>
          <p class="card-text"><%= truncate(vector.description, length: 100) %></p>
          
          <div class="mb-2">
            <small class="text-muted">
              <strong>Promoter:</strong> <%= vector.promoter&.name || "N/A" %><br>
              <strong>Selection:</strong> <%= vector.selection_marker&.name || "N/A" %><br>
              <strong>Size:</strong> <%= vector.vector_size ? "#{vector.vector_size} bp" : "N/A" %>
            </small>
          </div>
          
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <% if vector.sale_price %>
                <strong class="text-success">$<%= vector.sale_price %></strong>
              <% end %>
              <% if vector.subscription_price %>
                <br><small class="text-muted">Subscription: $<%= vector.subscription_price %></small>
              <% end %>
            </div>
            <%= link_to "View Details", vector, class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @vectors.empty? %>
  <div class="alert alert-info" role="alert">
    No vectors are currently available. Please check back later.
  </div>
<% end %>
