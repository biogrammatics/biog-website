<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Vectors</h1>
  <%= link_to "Add New Vector", new_admin_vector_path, class: "btn btn-success" %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Promoter</th>
        <th>Version</th>
        <th>Purchases</th>
        <th>Sale Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @vectors.each do |vector| %>
        <tr>
          <td>
            <%= vector.name %>
            <% if vector.has_been_purchased? %>
              <i class="bi bi-lock text-muted" title="Protected - has purchases"></i>
            <% end %>
          </td>
          <td><%= vector.vector_type&.name || "N/A" %></td>
          <td><%= vector.promoter&.name || "N/A" %></td>
          <td>
            <% if vector.file_version.present? %>
              <span class="badge bg-info">v<%= vector.file_version %></span>
            <% else %>
              <span class="text-muted">-</span>
            <% end %>
          </td>
          <td>
            <% if vector.purchase_count > 0 %>
              <span class="badge bg-primary"><%= vector.purchase_count %></span>
            <% else %>
              <span class="text-muted">0</span>
            <% end %>
          </td>
          <td><%= vector.sale_price ? "$#{vector.sale_price}" : "N/A" %></td>
          <td>
            <span class="badge <%= vector.available? ? 'bg-success' : 'bg-warning' %>">
              <%= vector.product_status&.name || "Unknown" %>
            </span>
          </td>
          <td>
            <%= link_to "View", admin_vector_path(vector), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_admin_vector_path(vector), class: "btn btn-sm btn-outline-secondary" %>
            <% if vector.can_be_deleted? %>
              <%= link_to "Delete", admin_vector_path(vector), method: :delete, 
                          class: "btn btn-sm btn-outline-danger",
                          confirm: "Are you sure you want to delete this vector?",
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% else %>
              <button class="btn btn-sm btn-outline-danger" disabled title="Cannot delete - has purchases">
                <i class="bi bi-lock"></i>
              </button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @vectors.empty? %>
  <div class="alert alert-info" role="alert">
    No vectors found. <%= link_to "Add the first vector", new_admin_vector_path, class: "alert-link" %>.
  </div>
<% end %>
