<!-- Header -->
<div class="bg-gray-50 py-8 border-b border-gray-200">
  <div class="container-custom">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-charcoal mb-2">Request Your Quote</h1>
      <p class="text-lg text-gray-600">
        Tell us about your project and we'll send you a detailed quote within 24 hours
      </p>
    </div>
  </div>
</div>

<!-- Quote Form -->
<div class="container-custom py-8">
  <div class="max-w-4xl mx-auto">
    <%= form_with model: @service_quote, url: protein_pathway_submit_quote_path do |f| %>
      <% if @service_quote.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
          <h4 class="text-red-900 font-semibold mb-3 flex items-center gap-2">
            <%= heroicon "exclamation-triangle", variant: :outline, class: "w-5 h-5" %>
            Please fix the following errors:
          </h4>
          <ul class="list-disc list-inside space-y-1 text-red-700">
            <% @service_quote.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Contact Information -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal flex items-center gap-2">
            <%= heroicon "user", variant: :outline, class: "w-5 h-5 text-bio-green" %>
            Contact Information
          </h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :full_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :full_name,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  required: true,
                  placeholder: "Dr. Jane Smith" %>
            </div>

            <div>
              <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.email_field :email_address,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  required: true,
                  placeholder: "jane.smith@university.edu",
                  value: (Current.user.email_address if authenticated?) %>
            </div>

            <div>
              <%= f.label :organization, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :organization,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  placeholder: "University of Example" %>
            </div>

            <div>
              <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.telephone_field :phone_number,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  placeholder: "+1 (555) 123-4567" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Project Details -->
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-charcoal flex items-center gap-2">
            <%= heroicon "clipboard-document-list", variant: :outline, class: "w-5 h-5 text-bio-green" %>
            Project Details
          </h3>
        </div>
        <div class="p-6">
          <div class="space-y-6">
            <div>
              <%= f.label :project_name, "Project Name (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :project_name,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  placeholder: "e.g., Antibody Fragment Production" %>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :target_protein_name, "Target Protein", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :target_protein_name,
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                    placeholder: "e.g., scFv antibody, GFP" %>
              </div>

              <div>
                <%= f.label :protein_tags, "Protein Tags (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :protein_tags,
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                    placeholder: "e.g., His-tag, FLAG-tag" %>
              </div>
            </div>

            <div>
              <%= f.label :special_requirements, "Special Requirements or Questions", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :special_requirements,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  rows: 4,
                  placeholder: "Any specific requirements, timeline constraints, or questions about the services..." %>
            </div>

            <div>
              <%= f.label :notes, "Additional Notes (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :notes,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-transparent transition-all",
                  rows: 3,
                  placeholder: "Any other information that might be helpful..." %>
            </div>
          </div>
        </div>
      </div>

      <!-- Selected Services Summary -->
      <div class="bg-white rounded-xl border-2 border-bio-green overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-bio-green bg-bio-green text-white">
          <h3 class="text-lg font-semibold flex items-center gap-2">
            <%= heroicon "check-circle", variant: :outline, class: "w-5 h-5" %>
            Services You've Selected
          </h3>
        </div>
        <div class="p-6">
          <% service_selections = @selections.select(&:service?) %>
          <% if service_selections.any? %>
            <ul class="space-y-3 mb-4">
              <% service_selections.each do |selection| %>
                <li class="flex items-start gap-2">
                  <%= heroicon "check", variant: :outline, class: "w-6 h-6 text-bio-green flex-shrink-0" %>
                  <div class="flex-grow">
                    <span class="font-medium text-charcoal">Step <%= selection.step_number %>:</span>
                    <span class="text-gray-700"><%= selection.service_package.name %></span>
                    <span class="text-gray-500 text-sm">(<%= number_to_currency(selection.service_package.estimated_price) %>)</span>
                  </div>
                </li>
              <% end %>
            </ul>

            <div class="pt-4 border-t border-gray-200">
              <div class="flex justify-between items-center">
                <strong class="text-lg text-charcoal">Estimated Total:</strong>
                <strong class="text-2xl text-bio-green">
                  <%= number_to_currency(service_selections.sum { |s| s.service_package.estimated_price }) %>
                </strong>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Submit -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to protein_pathway_review_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <%= heroicon "arrow-left", variant: :outline, class: "w-5 h-5" %> Back to Review
        <% end %>

        <%= f.submit "Request Quote", class: "flex-grow inline-flex items-center justify-center gap-2 px-6 py-3 bg-bio-green text-white font-semibold rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg cursor-pointer" %>
      </div>

      <p class="text-sm text-center mt-4 text-gray-500">
        By submitting this form, you agree to be contacted by BioGrammatics regarding your quote request.
        We typically respond within 24 hours during business days.
      </p>
    <% end %>
  </div>
</div>
