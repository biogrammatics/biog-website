<!-- Success Message -->
<section class="modern-section">
  <div class="modern-container">
    <div class="row">
      <div class="col-lg-6 mx-auto text-center">
        <div class="success-icon mb-4">
          <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>

        <h1 class="modern-h1 mb-3">Thank You!</h1>
        <p class="modern-body-lg mb-4">
          We've received your quote request and will send you a detailed proposal within 24 hours.
        </p>

        <div class="alert alert-info d-inline-block">
          <div class="d-flex align-items-start">
            <i class="bi bi-info-circle me-2 mt-1"></i>
            <div class="text-start">
              <strong>What happens next?</strong>
              <ol class="mb-0 mt-2 ps-3">
                <li>Our team will review your project requirements</li>
                <li>We'll prepare a detailed quote with exact pricing and timeline</li>
                <li>You'll receive the quote via email within 24 business hours</li>
                <li>We'll schedule a call to discuss your project if needed</li>
              </ol>
            </div>
          </div>
        </div>

        <div class="mt-5">
          <h3 class="h5 mb-3">While you wait...</h3>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <%= link_to "Browse Vectors", vectors_path, class: "modern-btn modern-btn-accent" %>
            <%= link_to "View Strains", pichia_strains_path, class: "modern-btn modern-btn-secondary" %>
            <%= link_to "Return Home", root_path, class: "modern-btn modern-btn-secondary" %>
          </div>
        </div>

        <div class="mt-5 pt-4 border-top">
          <p class="modern-caption text-muted">
            <strong>Questions?</strong> Contact us at
            <a href="mailto:info@biogrammatics.com">info@biogrammatics.com</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.success-icon {
  animation: scaleIn 0.5s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}
</style>
