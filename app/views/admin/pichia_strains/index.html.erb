<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Pichia Strains</h1>
  <%= link_to "Add New Strain", new_admin_pichia_strain_path, class: "btn btn-success" %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Strain Type</th>
        <th>Genotype</th>
        <th>Phenotype</th>
        <th>Price</th>
        <th>Availability</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pichia_strains.each do |strain| %>
        <tr>
          <td><%= strain.name %></td>
          <td><%= strain.strain_type&.name || "N/A" %></td>
          <td><%= strain.genotype || "N/A" %></td>
          <td><%= strain.phenotype || "N/A" %></td>
          <td><%= strain.sale_price ? "$#{strain.sale_price}" : "N/A" %></td>
          <td>
            <span class="badge <%= strain.availability == 'In Stock' ? 'bg-success' : 'bg-warning' %>">
              <%= strain.availability || "Unknown" %>
            </span>
          </td>
          <td>
            <span class="badge <%= strain.available? ? 'bg-success' : 'bg-warning' %>">
              <%= strain.product_status&.name || "Unknown" %>
            </span>
          </td>
          <td>
            <%= link_to "View", admin_pichia_strain_path(strain), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_admin_pichia_strain_path(strain), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Delete", admin_pichia_strain_path(strain), method: :delete, 
                        class: "btn btn-sm btn-outline-danger",
                        confirm: "Are you sure you want to delete this strain?",
                        data: { turbo_method: :delete } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @pichia_strains.empty? %>
  <div class="alert alert-info" role="alert">
    No Pichia strains found. <%= link_to "Add the first strain", new_admin_pichia_strain_path, class: "alert-link" %>.
  </div>
<% end %>
