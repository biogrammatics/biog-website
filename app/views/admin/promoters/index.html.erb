<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Promoters</h1>
  <%= link_to "New Promoter", new_admin_promoter_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @promoters.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Full Name</th>
              <th>Inducible</th>
              <th>Strength</th>
              <th>Vectors Using</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @promoters.each do |promoter| %>
              <tr>
                <td><strong><%= promoter.name %></strong></td>
                <td><%= promoter.full_name.presence || "-" %></td>
                <td>
                  <% if promoter.inducible %>
                    <span class="badge bg-warning">Inducible</span>
                  <% else %>
                    <span class="badge bg-info">Constitutive</span>
                  <% end %>
                </td>
                <td><%= promoter.strength.presence || "-" %></td>
                <td>
                  <%= promoter.vectors.count %>
                  <% if promoter.vectors.any? %>
                    <small class="text-muted">(in use)</small>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to "View", admin_promoter_path(promoter), class: "btn btn-outline-primary" %>
                    <%= link_to "Edit", edit_admin_promoter_path(promoter), class: "btn btn-outline-secondary" %>
                    <% unless promoter.vectors.any? %>
                      <%= button_to "Delete", admin_promoter_path(promoter), method: :delete, 
                          data: { turbo_confirm: "Are you sure?" }, 
                          class: "btn btn-outline-danger" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted text-center py-4">No promoters found.</p>
    <% end %>
  </div>
</div>