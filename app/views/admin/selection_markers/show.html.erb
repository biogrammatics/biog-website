<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-xl font-semibold text-gray-900">Selection Marker Details</h2>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_admin_selection_marker_path(@selection_marker), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Back to Selection Markers", admin_selection_markers_path, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
    <div class="px-6 py-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-3">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @selection_marker.name %></dd>
        </div>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Resistance</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @selection_marker.resistance.presence || "-" %></dd>
        </div>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Concentration</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @selection_marker.concentration.presence || "-" %></dd>
        </div>
      </dl>

      <div class="border-t border-gray-200 my-6"></div>

      <h5 class="text-base font-medium text-gray-900 mb-4">Vectors Using This Selection Marker</h5>
      <% if @selection_marker.vectors.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vector Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @selection_marker.vectors.includes(:product_status).each do |vector| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600 hover:text-blue-900"><%= link_to vector.name, admin_vector_path(vector) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= vector.category %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if vector.product_status&.is_available? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500">No vectors are currently using this selection marker.</p>
      <% end %>

      <% unless @selection_marker.vectors.any? %>
        <div class="border-t border-gray-200 my-6"></div>
        <div class="flex justify-end">
          <%= button_to "Delete Selection Marker", admin_selection_marker_path(@selection_marker), method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this selection marker?" },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>