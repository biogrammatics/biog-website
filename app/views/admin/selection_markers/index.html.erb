<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Manage Selection Markers</h1>
  <%= link_to "New Selection Marker", new_admin_selection_marker_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
</div>

<div class="bg-white shadow-sm rounded-lg">
  <div class="p-6">
    <% if @selection_markers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resistance</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Concentration</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vectors Using</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @selection_markers.each do |marker| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= marker.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= marker.resistance.presence || "-" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= marker.concentration.presence || "-" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= marker.vectors.count %>
                  <% if marker.vectors.any? %>
                    <span class="text-gray-500">(in use)</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", admin_selection_marker_path(marker), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "Edit", edit_admin_selection_marker_path(marker), class: "text-gray-600 hover:text-gray-900" %>
                    <% unless marker.vectors.any? %>
                      <%= button_to "Delete", admin_selection_marker_path(marker), method: :delete,
                          data: { turbo_confirm: "Are you sure?" },
                          class: "text-red-600 hover:text-red-900" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No selection markers found.</p>
    <% end %>
  </div>
</div>