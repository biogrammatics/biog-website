<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Manage Pichia Strains</h1>
  <%= link_to "Add New Strain", new_admin_pichia_strain_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
</div>

<div class="bg-white shadow-sm rounded-lg">
  <div class="p-6">
    <% if @pichia_strains.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Strain Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Genotype</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phenotype</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Availability</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @pichia_strains.each do |strain| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= strain.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= strain.strain_type&.name || "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= strain.genotype || "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= strain.phenotype || "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= strain.sale_price ? "$#{strain.sale_price}" : "N/A" %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= strain.availability == 'In Stock' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= strain.availability || "Unknown" %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= strain.available? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= strain.product_status&.name || "Unknown" %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", admin_pichia_strain_path(strain), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "Edit", edit_admin_pichia_strain_path(strain), class: "text-gray-600 hover:text-gray-900" %>
                    <%= button_to "Delete", admin_pichia_strain_path(strain),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this strain?" },
                        class: "text-red-600 hover:text-red-900" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No Pichia strains found. <%= link_to "Add the first strain", new_admin_pichia_strain_path, class: "text-blue-600 hover:text-blue-900" %>.</p>
    <% end %>
  </div>
</div>
