<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-xl font-semibold text-gray-900">User Details</h2>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_admin_user_path(@user), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Back to Users", admin_users_path, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
    <div class="px-6 py-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-3">
        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">ID</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.id %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.email_address %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">First Name</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.first_name.presence || "-" %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Last Name</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.last_name.presence || "-" %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Full Name</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.full_name.presence || "-" %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Role</dt>
          <dd class="text-sm text-gray-900 col-span-2">
            <% if @user.admin? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Administrator</span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Customer</span>
            <% end %>
          </dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Twist Username</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.twist_username.presence || "-" %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="text-sm text-gray-900 col-span-2"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">2FA Status</dt>
          <dd class="text-sm text-gray-900 col-span-2">
            <% if @user.two_factor_enabled? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Enabled</span>
              <span class="text-gray-500 ml-2 text-xs">
                via <%= @user.otp_delivery_method&.upcase %>
                <% if @user.two_factor_confirmed_at %>
                  (since <%= @user.two_factor_confirmed_at.strftime("%b %d, %Y") %>)
                <% end %>
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Disabled</span>
            <% end %>
          </dd>
        </div>

        <div class="sm:col-span-3 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
          <dd class="text-sm text-gray-900 col-span-2">
            <%= @user.phone_number.presence || "-" %>
            <% if @user.phone_verified? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2">Verified</span>
            <% end %>
          </dd>
        </div>
      </dl>

      <div class="border-t border-gray-200 my-6"></div>

      <h5 class="text-lg font-medium text-gray-900 mb-4">Login Activity</h5>
      <div class="mb-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-3">
          <div class="sm:col-span-3 grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">Total Logins</dt>
            <dd class="text-sm text-gray-900 col-span-2"><%= @user.login_count %></dd>
          </div>

          <div class="sm:col-span-3 grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">Last Login</dt>
            <dd class="text-sm text-gray-900 col-span-2">
              <% if @user.last_login_at %>
                <%= @user.last_login_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-500">(<%= time_ago_in_words(@user.last_login_at) %> ago)</span>
              <% else %>
                <span class="text-gray-500">Never logged in</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <% if @recent_sessions.any? %>
        <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
            <h6 class="text-sm font-medium text-gray-900">Recent Login History (Last 20)</h6>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP Address</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Device / Browser</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @recent_sessions.each do |session| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= session.created_at.strftime("%b %d, %Y %I:%M %p") %>
                      <br>
                      <span class="text-gray-500 text-xs"><%= time_ago_in_words(session.created_at) %> ago</span>
                    </td>
                    <td class="px-6 py-4 text-sm">
                      <code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= session.ip_address.presence || "Unknown" %></code>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      <%= session.user_agent.presence || "Unknown" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-700">No login history available for this user.</p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="border-t border-gray-200 my-6"></div>

      <h5 class="text-lg font-medium text-gray-900 mb-4">Associated Data</h5>
      <ul class="space-y-2 text-sm">
        <li class="flex justify-between">
          <span class="font-medium text-gray-700">Cart Items:</span>
          <span class="text-gray-900"><%= @user.cart&.cart_items&.count || 0 %></span>
        </li>
        <li class="flex justify-between items-center">
          <span class="font-medium text-gray-700">Subscriptions:</span>
          <span class="text-gray-900">
            <%= @user.subscriptions.count %>
            <% if @user.has_active_subscription? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2">Active Subscription</span>
            <% end %>
          </span>
        </li>
        <li class="flex justify-between">
          <span class="font-medium text-gray-700">Custom Projects:</span>
          <span class="text-gray-900"><%= @user.custom_projects.count %></span>
        </li>
        <li class="flex justify-between">
          <span class="font-medium text-gray-700">Addresses:</span>
          <span class="text-gray-900"><%= @user.addresses.count %></span>
        </li>
        <li class="flex justify-between">
          <span class="font-medium text-gray-700">Orders:</span>
          <span class="text-gray-900"><%= @user.orders.count %></span>
        </li>
      </ul>

      <% if @user != Current.user %>
        <div class="border-t border-gray-200 my-6"></div>
        <div class="flex justify-end">
          <%= button_to "Delete User", admin_user_path(@user), method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this user? This will also delete all associated data (cart, subscriptions, projects, etc.)." },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>