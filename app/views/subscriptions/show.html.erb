<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Twist Subscription Details</h1>
    <%= link_to "â† Back to Subscriptions", subscriptions_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900">Subscription Overview</h3>
        </div>
        <div class="px-6 py-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <p class="text-sm"><strong class="font-semibold text-gray-700">Status:</strong>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @subscription.active? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= @subscription.status.titleize %>
                </span>
              </p>
              <p class="text-sm"><strong class="font-semibold text-gray-700">Twist Username:</strong> <span class="text-gray-900"><%= @subscription.twist_username %></span></p>
              <p class="text-sm"><strong class="font-semibold text-gray-700">Onboarding Fee:</strong> <span class="text-gray-900">$<%= @subscription.onboarding_fee %></span></p>
            </div>
            <div class="space-y-3">
              <% if @subscription.started_at %>
                <p class="text-sm"><strong class="font-semibold text-gray-700">Started:</strong> <span class="text-gray-900"><%= @subscription.started_at.strftime("%B %d, %Y") %></span></p>
                <p class="text-sm"><strong class="font-semibold text-gray-700">Renewal Date:</strong> <span class="text-gray-900"><%= @subscription.renewal_date.strftime("%B %d, %Y") %></span></p>
                <p class="text-sm"><strong class="font-semibold text-gray-700">Days Until Renewal:</strong> <span class="text-gray-900"><%= @subscription.days_until_renewal %> days</span></p>
              <% else %>
                <p class="text-sm"><strong class="font-semibold text-gray-700">Status:</strong> <span class="text-gray-900">Pending activation</span></p>
              <% end %>
            </div>
          </div>

          <% if @subscription.active? %>
            <div class="mt-6">
              <% days_completed = @subscription.days_since_started %>
              <% total_days = 365 %>
              <% progress_percent = [(days_completed.to_f / total_days * 100), 100].min %>
              <div class="w-full bg-gray-200 rounded-full h-6 overflow-hidden">
                <div class="bg-blue-600 h-6 flex items-center justify-center text-white text-xs font-medium"
                     style="width: <%= progress_percent %>%"
                     role="progressbar"
                     aria-valuenow="<%= progress_percent %>"
                     aria-valuemin="0"
                     aria-valuemax="100">
                  <%= days_completed %> of <%= total_days %> days
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900">Subscribed Vectors</h3>
        </div>
        <div class="px-6 py-4">
          <% if @subscription_vectors.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vector</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Added Date</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prorated Amount</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @subscription_vectors.each do |subscription_vector| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-blue-600 hover:text-blue-800"><%= link_to subscription_vector.vector.name, subscription_vector.vector %></div>
                        <div class="text-sm text-gray-500">
                          <%= truncate(subscription_vector.vector.description, length: 60) %>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900"><%= subscription_vector.added_at.strftime("%b %d, %Y") %></div>
                        <div class="text-sm text-gray-500">
                          <%= time_ago_in_words(subscription_vector.added_at) %> ago
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">$<%= subscription_vector.prorated_amount %></div>
                        <div class="text-sm text-gray-500">
                          (<%= subscription_vector.days_in_subscription %> days)
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <%= link_to "View", subscription_vector.vector, class: "inline-flex items-center px-3 py-1 border border-blue-600 text-blue-600 rounded hover:bg-blue-50 text-sm" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="bg-blue-50">
                  <tr>
                    <th colspan="2" class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Total Subscription Cost</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">$<%= @subscription.total_subscription_cost.round(2) %></th>
                    <th class="px-6 py-3"></th>
                  </tr>
                </tfoot>
              </table>
            </div>
          <% else %>
            <div class="text-center py-12">
              <%= heroicon "shopping-bag", variant: :outline, class: "w-16 h-16 text-gray-400 mb-4 mx-auto" %>
              <h4 class="text-xl font-semibold text-gray-900 mb-2">No vectors in subscription yet</h4>
              <p class="text-gray-500 mb-4">Add vectors to start your Twist integration.</p>
              <%= link_to "Browse Available Vectors", subscriptions_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h4 class="text-lg font-semibold text-gray-900">Quick Actions</h4>
        </div>
        <div class="px-6 py-4 space-y-3">
          <%= link_to "Add More Vectors", subscriptions_path, class: "block w-full text-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
          <%= link_to "View Account", account_path, class: "block w-full text-center px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50" %>

          <hr class="my-4 border-gray-200">

          <h6 class="text-sm font-semibold text-gray-900">Need Help?</h6>
          <p class="text-sm text-gray-500">
            Contact our support team for assistance with your Twist integration or vector questions.
          </p>
          <button class="w-full px-4 py-2 border border-blue-400 text-blue-600 rounded-md text-sm opacity-50 cursor-not-allowed" disabled>
            Contact Support
          </button>
        </div>
      </div>

      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h4 class="text-lg font-semibold text-gray-900">Billing Information</h4>
        </div>
        <div class="px-6 py-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <h6 class="text-sm font-semibold text-gray-700 mb-1">Onboarding Fee</h6>
              <h4 class="text-2xl font-bold text-green-600">$<%= @subscription.onboarding_fee %></h4>
            </div>
            <div>
              <h6 class="text-sm font-semibold text-gray-700 mb-1">Vector Costs</h6>
              <h4 class="text-2xl font-bold text-blue-600">$<%= @subscription.total_subscription_cost.round(2) %></h4>
            </div>
          </div>

          <hr class="my-4 border-gray-200">

          <div class="flex justify-between items-center">
            <strong class="text-gray-900">Total Cost:</strong>
            <strong class="text-gray-900 text-lg">
              $<%= (@subscription.onboarding_fee + @subscription.total_subscription_cost).round(2) %>
            </strong>
          </div>

          <div class="mt-4">
            <h6 class="text-sm font-semibold text-gray-900 mb-1">Renewal Information</h6>
            <p class="text-sm text-gray-500">
              <% if @subscription.renewal_date %>
                Your subscription renews on <%= @subscription.renewal_date.strftime("%B %d, %Y") %>.
                New vectors added after today will be prorated based on the remaining days.
              <% else %>
                Subscription pending activation.
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
