<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Manage Promoters</h1>
  <%= link_to "New Promoter", new_admin_promoter_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
</div>

<div class="bg-white shadow-sm rounded-lg">
  <div class="p-6">
    <% if @promoters.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Full Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inducible</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Strength</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vectors Using</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @promoters.each do |promoter| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= promoter.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= promoter.full_name.presence || "-" %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if promoter.inducible %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Inducible</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Constitutive</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= promoter.strength.presence || "-" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= promoter.vectors.count %>
                  <% if promoter.vectors.any? %>
                    <span class="text-gray-500">(in use)</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", admin_promoter_path(promoter), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "Edit", edit_admin_promoter_path(promoter), class: "text-gray-600 hover:text-gray-900" %>
                    <% unless promoter.vectors.any? %>
                      <%= button_to "Delete", admin_promoter_path(promoter), method: :delete,
                          data: { turbo_confirm: "Are you sure?" },
                          class: "text-red-600 hover:text-red-900" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No promoters found.</p>
    <% end %>
  </div>
</div>