<div class="container-custom py-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
      <div class="bg-green-50 border border-green-200 rounded-xl p-8">
        <i class="bi bi-check-circle text-6xl text-bio-green mb-4 block"></i>
        <h2 class="text-3xl font-bold text-bio-green mb-2">Order Placed Successfully!</h2>
        <p class="text-gray-700">Thank you for your order. We've received your order and will begin processing it shortly.</p>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-200 bg-blue-600 text-white">
        <h4 class="text-xl font-bold">Order Confirmation</h4>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h6 class="font-semibold text-charcoal mb-3">Order Details</h6>
            <p class="mb-2 text-gray-700"><strong>Order Number:</strong> <%= @order.order_number %></p>
            <p class="mb-2 text-gray-700"><strong>Order Date:</strong> <%= @order.ordered_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            <p class="mb-2 text-gray-700"><strong>Status:</strong> <span class="inline-flex items-center px-3 py-1 rounded-full bg-yellow-100 text-yellow-700 text-sm font-medium"><%= @order.display_status %></span></p>
          </div>
          <div>
            <h6 class="font-semibold text-charcoal mb-3">Order Total</h6>
            <div class="space-y-2">
              <div class="flex justify-between text-gray-700">
                <span>Subtotal:</span>
                <span>$<%= sprintf("%.2f", @order.subtotal) %></span>
              </div>
              <div class="flex justify-between text-gray-700">
                <span>Shipping:</span>
                <span>
                  <% if @order.shipping_cost == 0 %>
                    <span class="text-bio-green font-medium">FREE</span>
                  <% else %>
                    $<%= sprintf("%.2f", @order.shipping_cost) %>
                  <% end %>
                </span>
              </div>
              <div class="flex justify-between text-gray-700">
                <span>Tax:</span>
                <span>$<%= sprintf("%.2f", @order.tax_amount) %></span>
              </div>
              <hr class="border-gray-300">
              <div class="flex justify-between text-lg">
                <strong class="text-charcoal">Total:</strong>
                <strong class="text-blue-600">$<%= sprintf("%.2f", @order.total_amount) %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h5 class="text-lg font-semibold text-charcoal">Order Items</h5>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @order.order_items.each do |order_item| %>
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-center pb-4 border-b border-gray-100 last:border-0">
              <div class="md:col-span-6">
                <h6 class="font-semibold text-charcoal mb-1"><%= order_item.item_name %></h6>
                <p class="text-gray-600 text-sm"><%= order_item.item_description %></p>
              </div>
              <div class="md:col-span-2 text-center">
                <span class="text-gray-700">Qty: <%= order_item.quantity %></span>
              </div>
              <div class="md:col-span-2 text-center">
                <span class="text-gray-700">$<%= order_item.price %> each</span>
              </div>
              <div class="md:col-span-2 text-right">
                <span class="font-bold text-charcoal">$<%= order_item.total_price %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h6 class="font-semibold text-charcoal">Billing Address</h6>
        </div>
        <div class="p-6">
          <address class="text-gray-700 not-italic">
            <%= simple_format(@order.billing_address) %>
          </address>
        </div>
      </div>
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h6 class="font-semibold text-charcoal">Shipping Address</h6>
        </div>
        <div class="p-6">
          <address class="text-gray-700 not-italic">
            <%= simple_format(@order.shipping_address) %>
          </address>
        </div>
      </div>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mb-6">
      <h6 class="font-semibold text-charcoal mb-3">What happens next?</h6>
      <ul class="space-y-2 text-gray-700 list-disc list-inside">
        <li>You'll receive an email confirmation shortly with your order details</li>
        <li>We'll process your order and prepare it for shipment</li>
        <li>You'll receive tracking information once your order ships</li>
        <li>Estimated delivery: 5-7 business days</li>
      </ul>
    </div>

    <div class="text-center flex flex-col sm:flex-row justify-center gap-3">
      <%= link_to vectors_path, class: "inline-flex items-center justify-center px-8 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
        Continue Shopping
      <% end %>
      <%= link_to account_path, class: "inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
        View Account
      <% end %>
    </div>
  </div>
</div>
