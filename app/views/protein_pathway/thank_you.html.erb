<!-- Success Message -->
<div class="container-custom py-16">
  <div class="max-w-2xl mx-auto text-center">
    <div class="mb-6 animate-bounce">
      <%= heroicon "check-circle", variant: :solid, class: "w-24 h-24 text-bio-green" %>
    </div>

    <h1 class="text-4xl font-bold text-charcoal mb-4">Thank You!</h1>
    <p class="text-xl text-gray-600 mb-8">
      We've received your quote request and will send you a detailed proposal within 24 hours.
    </p>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8 text-left inline-block max-w-lg">
      <div class="flex items-start gap-3">
        <%= heroicon "information-circle", variant: :outline, class: "w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" %>
        <div>
          <strong class="text-gray-900 block mb-3">What happens next?</strong>
          <ol class="space-y-2 text-gray-700">
            <li class="flex items-start gap-2">
              <span class="font-semibold text-bio-green flex-shrink-0">1.</span>
              <span>Our team will review your project requirements</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-semibold text-bio-green flex-shrink-0">2.</span>
              <span>We'll prepare a detailed quote with exact pricing and timeline</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-semibold text-bio-green flex-shrink-0">3.</span>
              <span>You'll receive the quote via email within 24 business hours</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-semibold text-bio-green flex-shrink-0">4.</span>
              <span>We'll schedule a call to discuss your project if needed</span>
            </li>
          </ol>
        </div>
      </div>
    </div>

    <div class="mt-8">
      <h3 class="text-lg font-semibold text-charcoal mb-4">While you wait...</h3>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <%= link_to vectors_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-bio-green text-white font-semibold rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg" do %>
          <%= heroicon "chart-bar", variant: :outline, class: "w-5 h-5" %>
          Browse Vectors
        <% end %>
        <%= link_to pichia_strains_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <%= heroicon "beaker", variant: :solid, class: "w-5 h-5" %>
          View Strains
        <% end %>
        <%= link_to root_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <%= heroicon "home", variant: :outline, class: "w-5 h-5" %>
          Return Home
        <% end %>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-500">
        <strong class="text-gray-700">Questions?</strong> Contact us at
        <a href="mailto:info@biogrammatics.com" class="text-bio-green hover:underline font-medium">info@biogrammatics.com</a>
      </p>
    </div>
  </div>
</div>
