<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @custom_project.project_name %></h1>
    <div class="flex gap-2">
      <%= link_to admin_custom_projects_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Projects
      <% end %>
      <%= link_to "Edit Project", edit_admin_custom_project_path(@custom_project), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Project Details -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Project Details</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="grid grid-cols-3 gap-4">
            <div class="font-semibold text-gray-700">Status:</div>
            <div class="col-span-2">
              <% case @custom_project.status %>
              <% when 'pending' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-yellow-100 text-yellow-800"><%= @custom_project.display_status %></span>
              <% when 'in_progress' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-blue-100 text-blue-800"><%= @custom_project.display_status %></span>
              <% when 'completed' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-green-100 text-green-800"><%= @custom_project.display_status %></span>
              <% when 'cancelled' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-red-100 text-red-800"><%= @custom_project.display_status %></span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-gray-100 text-gray-800"><%= @custom_project.display_status %></span>
              <% end %>
            </div>
          </div>

          <% if @custom_project.project_type.present? %>
            <div class="grid grid-cols-3 gap-4">
              <div class="font-semibold text-gray-700">Project Type:</div>
              <div class="col-span-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-cyan-100 text-cyan-800"><%= @custom_project.project_type.humanize %></span>
              </div>
            </div>
          <% end %>

          <% if @custom_project.description.present? %>
            <div class="grid grid-cols-3 gap-4">
              <div class="font-semibold text-gray-700">Description:</div>
              <div class="col-span-2 text-gray-900"><%= simple_format(@custom_project.description) %></div>
            </div>
          <% end %>

          <div class="grid grid-cols-3 gap-4">
            <div class="font-semibold text-gray-700">Services:</div>
            <div class="col-span-2">
              <% if @custom_project.total_services.any? %>
                <ul class="space-y-1">
                  <% @custom_project.total_services.each do |service| %>
                    <li class="flex items-center text-gray-900">
                      <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <%= service %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <span class="text-gray-500">No specific services selected</span>
              <% end %>
            </div>
          </div>

          <% if @custom_project.notes.present? %>
            <div class="grid grid-cols-3 gap-4">
              <div class="font-semibold text-gray-700">Customer Notes:</div>
              <div class="col-span-2 text-gray-900"><%= simple_format(@custom_project.notes) %></div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Status Management -->
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Status Management</h3>
        </div>
        <div class="p-6">
          <p class="text-gray-600 mb-4">Update project status to notify the customer of progress:</p>
          <div class="flex flex-wrap gap-2">
            <%= button_to "Mark as In Progress", admin_custom_project_update_status_path(@custom_project), params: { status: 'in_progress' }, method: :patch, class: "inline-flex items-center px-4 py-2 border rounded-md shadow-sm text-sm font-medium #{@custom_project.status == 'in_progress' ? 'border-transparent text-white bg-blue-600 hover:bg-blue-700' : 'border-blue-600 text-blue-600 bg-white hover:bg-blue-50'}", data: { turbo_confirm: @custom_project.status == 'in_progress' ? nil : 'Mark this project as in progress?' } %>

            <%= button_to "Mark as Completed", admin_custom_project_update_status_path(@custom_project), params: { status: 'completed' }, method: :patch, class: "inline-flex items-center px-4 py-2 border rounded-md shadow-sm text-sm font-medium #{@custom_project.status == 'completed' ? 'border-transparent text-white bg-green-600 hover:bg-green-700' : 'border-green-600 text-green-600 bg-white hover:bg-green-50'}", data: { turbo_confirm: @custom_project.status == 'completed' ? nil : 'Mark this project as completed?' } %>

            <%= button_to "Cancel Project", admin_custom_project_update_status_path(@custom_project), params: { status: 'cancelled' }, method: :patch, class: "inline-flex items-center px-4 py-2 border rounded-md shadow-sm text-sm font-medium #{@custom_project.status == 'cancelled' ? 'border-transparent text-white bg-red-600 hover:bg-red-700' : 'border-red-600 text-red-600 bg-white hover:bg-red-50'}", data: { turbo_confirm: 'Are you sure you want to cancel this project?' } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Customer & Timeline Info -->
    <div class="space-y-6">
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Customer Information</h3>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <p class="text-sm font-semibold text-gray-700">Name:</p>
            <p class="text-gray-900"><%= @custom_project.user.full_name.presence || "Not provided" %></p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-700">Email:</p>
            <p class="text-gray-900"><%= @custom_project.user.email_address %></p>
          </div>
          <% if @custom_project.user.twist_username.present? %>
            <div>
              <p class="text-sm font-semibold text-gray-700">Twist Username:</p>
              <p class="text-gray-900"><%= @custom_project.user.twist_username %></p>
            </div>
          <% end %>
          <div>
            <p class="text-sm font-semibold text-gray-700">Customer Since:</p>
            <p class="text-gray-900"><%= @custom_project.user.created_at.strftime("%B %Y") %></p>
          </div>

          <div class="pt-4 border-t border-gray-200">
            <%= link_to "View Customer Account", account_path, class: "inline-flex items-center px-3 py-2 border border-cyan-600 rounded-md shadow-sm text-sm font-medium text-cyan-600 bg-white hover:bg-cyan-50" %>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Project Timeline</h3>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <p class="text-sm font-semibold text-gray-700">Submitted:</p>
            <p class="text-gray-900"><%= @custom_project.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-700">Last Updated:</p>
            <p class="text-gray-900"><%= @custom_project.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>

          <% if @custom_project.estimated_cost.present? %>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm font-semibold text-gray-700">Estimated Cost:</p>
              <p class="text-2xl font-bold text-green-600">$<%= number_with_precision(@custom_project.estimated_cost, precision: 2) %></p>
            </div>
          <% end %>

          <% if @custom_project.estimated_completion_date.present? %>
            <div>
              <p class="text-sm font-semibold text-gray-700">Expected Completion:</p>
              <p class="text-gray-900"><%= @custom_project.estimated_completion_date.strftime("%B %d, %Y") %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
        </div>
        <div class="p-6">
          <div class="space-y-2">
            <%= link_to "Edit Project Details", edit_admin_custom_project_path(@custom_project), class: "block w-full text-center px-4 py-2 border border-blue-600 rounded-md shadow-sm text-sm font-medium text-blue-600 bg-white hover:bg-blue-50" %>
            <a href="mailto:<%= @custom_project.user.email_address %>?subject=RE: <%= @custom_project.project_name %>" class="block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">Email Customer</a>
            <% if @custom_project.status == 'pending' || @custom_project.status == 'cancelled' %>
              <%= link_to "Delete Project", admin_custom_project_path(@custom_project),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this project?" },
                  class: "block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>