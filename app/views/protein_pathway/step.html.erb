<div class="container-custom py-8">
  <!-- Progress Bar -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-3">
      <h6 class="text-sm font-semibold text-charcoal">Step <%= @current_step %> of 6</h6>
      <span class="text-sm text-gray-500"><%= (@current_step * 100 / 6).round %>% Complete</span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-bio-green h-2 rounded-full transition-all duration-500" style="width: <%= @current_step * 100 / 6 %>%"></div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto">
    <!-- Step Header -->
    <div class="text-center mb-8">
      <span class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 text-blue-700 font-semibold mb-4">
        Step <%= @service_package.step_number %>
      </span>
      <h1 class="text-4xl font-bold text-charcoal mb-3"><%= @service_package.name %></h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        <%= @service_package.description %>
      </p>
    </div>

    <!-- Choice Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- DIY Option -->
      <div class="bg-white rounded-xl border-2 border-gray-200 overflow-hidden transition-all hover:border-bio-green hover:shadow-lg group">
        <div class="p-6">
          <div class="text-center mb-6">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-100 flex items-center justify-center">
              <i class="bi bi-person-workspace text-3xl text-bio-green"></i>
            </div>
            <h3 class="text-2xl font-bold text-charcoal">Do It Yourself</h3>
          </div>

          <div class="space-y-4">
            <div class="text-gray-700">
              <%= simple_format(@service_package.diy_option, {}, wrapper_tag: "div", class: "space-y-2") %>
            </div>

            <% if @service_package.diy_challenges.present? %>
              <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <div class="flex gap-2 items-start">
                  <i class="bi bi-exclamation-triangle text-yellow-600 text-lg flex-shrink-0"></i>
                  <div class="flex-grow">
                    <strong class="text-yellow-900">Challenges:</strong>
                    <div class="text-yellow-800 text-sm mt-1">
                      <%= simple_format(@service_package.diy_challenges, {}, wrapper_tag: "div") %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-6">
            <%= button_to protein_pathway_select_path(step_number: @service_package.step_number, selection_type: "diy"),
                class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-bio-green text-bio-green font-semibold rounded-lg hover:bg-bio-green hover:text-white transition-colors" do %>
              <i class="bi bi-check-circle"></i>
              Choose DIY
            <% end %>
          </div>
        </div>
      </div>

      <!-- Service Option -->
      <div class="bg-white rounded-xl border-2 border-bio-green overflow-hidden transition-all hover:shadow-xl relative">
        <div class="absolute top-0 right-6 transform -translate-y-1/2">
          <span class="inline-block px-4 py-1 bg-bio-green text-white text-sm font-bold rounded-full shadow-md">
            Recommended
          </span>
        </div>

        <div class="p-6 bg-gradient-to-br from-green-50 to-white">
          <div class="text-center mb-6 pt-2">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-bio-green/10 flex items-center justify-center">
              <i class="bi bi-gear-wide-connected text-3xl text-bio-green"></i>
            </div>
            <h3 class="text-2xl font-bold text-charcoal">Do It With Us</h3>
          </div>

          <div class="space-y-4">
            <div class="text-gray-700">
              <%= simple_format(@service_package.service_option, {}, wrapper_tag: "div", class: "space-y-2") %>
            </div>

            <% if @service_package.service_benefits.present? %>
              <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex gap-2 items-start">
                  <i class="bi bi-stars text-bio-green text-lg flex-shrink-0"></i>
                  <div class="flex-grow">
                    <strong class="text-green-900">Benefits:</strong>
                    <div class="text-green-800 text-sm mt-1">
                      <%= simple_format(@service_package.service_benefits, {}, wrapper_tag: "div") %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @service_package.whats_included.present? %>
              <div class="border-t border-gray-200 pt-4">
                <strong class="text-gray-900 block mb-2">What's Included:</strong>
                <div class="text-gray-700 text-sm">
                  <%= simple_format(@service_package.whats_included, {}, wrapper_tag: "div") %>
                </div>
              </div>
            <% end %>

            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <div class="flex justify-between items-center">
                <span class="font-semibold text-gray-700">Price:</span>
                <span class="text-2xl font-bold text-bio-green"><%= number_to_currency(@service_package.estimated_price) %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-semibold text-gray-700">Turnaround:</span>
                <span class="text-gray-600"><%= @service_package.estimated_turnaround %></span>
              </div>
            </div>
          </div>

          <div class="mt-6">
            <%= button_to protein_pathway_select_path(step_number: @service_package.step_number, selection_type: "service"),
                class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-bio-green text-white font-semibold rounded-lg hover:bg-bio-green-dark transition-colors shadow-md hover:shadow-lg" do %>
              <i class="bi bi-check-circle"></i>
              Choose Service
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
      <% if @current_step > 1 %>
        <%= link_to protein_pathway_step_path(step: @current_step - 1), class: "inline-flex items-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="bi bi-arrow-left"></i>
          Previous Step
        <% end %>
      <% else %>
        <%= link_to protein_pathway_path, class: "inline-flex items-center gap-2 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="bi bi-arrow-left"></i>
          Back to Overview
        <% end %>
      <% end %>

      <% if @previous_selections.where(step_number: @current_step).exists? %>
        <% if @current_step < 6 %>
          <%= link_to protein_pathway_step_path(step: @current_step + 1), class: "inline-flex items-center gap-2 px-6 py-3 bg-bio-green text-white font-medium rounded-lg hover:bg-bio-green-dark transition-colors" do %>
            Skip to Next
            <i class="bi bi-arrow-right"></i>
          <% end %>
        <% else %>
          <%= link_to protein_pathway_review_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-bio-green text-white font-medium rounded-lg hover:bg-bio-green-dark transition-colors" do %>
            Review Selections
            <i class="bi bi-arrow-right"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
