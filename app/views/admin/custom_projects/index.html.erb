<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Custom Projects Management</h1>
        <div>
          <span class="badge bg-warning me-2"><%= @pending_projects.count %> Pending</span>
          <span class="badge bg-primary me-2"><%= @in_progress_projects.count %> In Progress</span>
          <span class="badge bg-success"><%= @completed_projects.count %> Completed</span>
        </div>
      </div>

      <!-- Tabs for different project statuses -->
      <ul class="nav nav-tabs" id="projectTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
            Pending Review <span class="badge bg-warning ms-1"><%= @pending_projects.count %></span>
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="in-progress-tab" data-bs-toggle="tab" data-bs-target="#in-progress" type="button" role="tab">
            In Progress <span class="badge bg-primary ms-1"><%= @in_progress_projects.count %></span>
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
            Completed <span class="badge bg-success ms-1"><%= @completed_projects.count %></span>
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
            All Projects <span class="badge bg-secondary ms-1"><%= @custom_projects.count %></span>
          </button>
        </li>
      </ul>

      <!-- Tab content -->
      <div class="tab-content" id="projectTabContent">
        <!-- Pending Projects -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="mb-0">Projects Requiring Review</h5>
            </div>
            <div class="card-body p-0">
              <% if @pending_projects.any? %>
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Project</th>
                        <th>Customer</th>
                        <th>Type</th>
                        <th>Services</th>
                        <th>Submitted</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @pending_projects.each do |project| %>
                        <tr>
                          <td>
                            <%= link_to project.project_name, admin_custom_project_path(project), class: "fw-bold text-decoration-none" %>
                          </td>
                          <td>
                            <%= project.user.full_name.presence || project.user.email_address %>
                          </td>
                          <td>
                            <% if project.project_type.present? %>
                              <span class="badge bg-info"><%= project.project_type.humanize %></span>
                            <% else %>
                              <span class="text-muted">Not specified</span>
                            <% end %>
                          </td>
                          <td>
                            <% if project.total_services.any? %>
                              <% project.total_services.each do |service| %>
                                <small class="d-block text-success"><i class="bi bi-check"></i> <%= service %></small>
                              <% end %>
                            <% else %>
                              <span class="text-muted">None specified</span>
                            <% end %>
                          </td>
                          <td>
                            <%= time_ago_in_words(project.created_at) %> ago
                          </td>
                          <td>
                            <div class="btn-group" role="group">
                              <%= link_to "Review", admin_custom_project_path(project), class: "btn btn-sm btn-outline-primary" %>
                              <%= button_to "Approve", admin_custom_project_update_status_path(project), params: { status: 'in_progress' }, method: :patch, class: "btn btn-sm btn-success", form: { style: "display: inline;" } %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% else %>
                <div class="text-center py-4">
                  <i class="bi bi-check-circle fs-1 text-muted"></i>
                  <h5 class="mt-3">No Pending Projects</h5>
                  <p class="text-muted">All projects have been reviewed.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- In Progress Projects -->
        <div class="tab-pane fade" id="in-progress" role="tabpanel">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="mb-0">Active Projects</h5>
            </div>
            <div class="card-body p-0">
              <% if @in_progress_projects.any? %>
                <%= render 'projects_table', projects: @in_progress_projects %>
              <% else %>
                <div class="text-center py-4">
                  <i class="bi bi-clock fs-1 text-muted"></i>
                  <h5 class="mt-3">No Active Projects</h5>
                  <p class="text-muted">No projects are currently in progress.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Completed Projects -->
        <div class="tab-pane fade" id="completed" role="tabpanel">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="mb-0">Completed Projects</h5>
            </div>
            <div class="card-body p-0">
              <% if @completed_projects.any? %>
                <%= render 'projects_table', projects: @completed_projects %>
              <% else %>
                <div class="text-center py-4">
                  <i class="bi bi-archive fs-1 text-muted"></i>
                  <h5 class="mt-3">No Completed Projects</h5>
                  <p class="text-muted">No projects have been completed yet.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- All Projects -->
        <div class="tab-pane fade" id="all" role="tabpanel">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="mb-0">All Projects</h5>
            </div>
            <div class="card-body p-0">
              <%= render 'projects_table', projects: @custom_projects %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>