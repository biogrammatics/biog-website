<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Set Up SMS Authentication</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="space-y-6">
      <div>
        <h2 class="text-xl font-semibold mb-4">Enter your phone number</h2>
        <p class="text-gray-600 mb-4">
          We'll send a verification code to this number whenever you sign in.
        </p>

        <%= form_with url: verify_phone_path, local: true do |f| %>
          <% if flash[:alert] %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-6">
            <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.telephone_field :phone_number,
                                placeholder: "(555) 123-4567",
                                class: "w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500",
                                required: true,
                                autofocus: true,
                                value: @user.phone_number %>
            <p class="text-sm text-gray-500 mt-2">
              Enter a US phone number. Standard messaging rates may apply.
            </p>
          </div>

          <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded mb-6">
            <strong>Note:</strong> SMS authentication is convenient but less secure than using an authenticator app.
            Consider using an authenticator app for better security.
          </div>

          <div class="flex justify-between items-center">
            <%= f.submit "Send Verification Code", class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition cursor-pointer" %>
            <%= link_to "Cancel", setup_path, class: "text-gray-600 hover:underline" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>