<div class="container-custom py-8">
  <!-- Breadcrumb -->
  <nav class="mb-6">
    <ol class="flex items-center gap-2 text-sm text-gray-600">
      <li><%= link_to "Home", root_path, class: "hover:text-gray-900" %></li>
      <li><i class="bi bi-chevron-right text-xs"></i></li>
      <li><%= link_to "Services", services_custom_projects_path, class: "hover:text-gray-900" %></li>
      <li><i class="bi bi-chevron-right text-xs"></i></li>
      <li class="text-gray-900 font-medium">Custom Project</li>
    </ol>
  </nav>

  <div class="max-w-3xl mx-auto">
    <div>
      <div class="text-center mb-8">
        <h1 class="flex items-center justify-center text-3xl font-bold mb-4">
          <i class="bi bi-diagram-3 mr-3 text-blue-600"></i>Custom Project Request
        </h1>
        <p class="text-xl text-gray-600 mb-6">Tell us about your complex protein expression needs</p>

        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
          <strong>This form is for:</strong> Complex projects, expression optimization, custom strain development, or consultation.
          <br>
          <small class="text-gray-600">
            Looking for a simple amino acid to strain conversion?
            <%= link_to "Try Protein Expression Service", services_custom_projects_path, class: "text-blue-600 hover:text-blue-700 font-semibold" %> instead.
          </small>
        </div>
      </div>
      
      <% unless authenticated? %>
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mb-6">
          <h5 class="text-lg font-semibold mb-3">Account Required</h5>
          <p class="mb-4">To submit a custom project request, you'll need to create an account or sign in. This helps us manage your project and keep you updated on progress.</p>
          <div class="border-t border-blue-200 my-4"></div>
          <div class="flex gap-3">
            <%= link_to "Sign In", new_session_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
            <%= link_to "Create Account", new_session_path, class: "inline-flex items-center px-6 py-3 border-2 border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors" %>
          </div>
        </div>
        <div class="border-t border-gray-200 my-6"></div>
        <h5 class="text-lg font-semibold mb-2">Preview Project Form</h5>
        <p class="text-gray-600 mb-6">You can review the project details form below, then sign in to submit your request.</p>
      <% end %>
      
      <%= form_with model: @form, url: authenticated? ? custom_projects_path : "#" do |form| %>
        <% if @form.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-6 mb-6">
            <h4 class="text-lg font-semibold mb-3"><%= pluralize(@form.errors.count, "error") %> prohibited this project from being saved:</h4>
            <ul class="list-disc list-inside space-y-1">
              <% @form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-6">
          <%= form.label :project_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :project_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-bio-green transition-colors", placeholder: "e.g., Human insulin expression in Pichia" %>
          <small class="text-sm text-gray-600">Give your project a descriptive name</small>
        </div>

        <div class="mb-6">
          <%= form.label :project_type, "Project Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :project_type,
              options_for_select([
                ["Strain Generation Only", "strain_only"],
                ["Strain Generation + Expression Testing", "strain_and_testing"],
                ["Full Service (Design to Delivery)", "full_service"],
                ["Consultation", "consultation"]
              ]),
              { prompt: "Select project type" },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-bio-green transition-colors" %>
          <small class="text-sm text-gray-600">Choose the level of service you need</small>
        </div>

        <div class="mb-6">
          <%= form.label :description, "Project Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 5, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-bio-green transition-colors",
              placeholder: "Describe your protein, expression goals, and any specific requirements..." %>
          <small class="text-sm text-gray-600">The more details you provide, the better we can assist you</small>
        </div>
        
        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-6">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h5 class="text-lg font-semibold">Services Required</h5>
          </div>
          <div class="p-6">
            <div class="mb-4">
              <div class="flex items-start">
                <%= form.check_box :strain_generation, class: "mt-1 mr-3", id: "strain_generation" %>
                <%= form.label :strain_generation, class: "flex-1 cursor-pointer" do %>
                  <strong>Custom Strain Generation</strong>
                  <br>
                  <small class="text-gray-600">We'll create optimized Pichia strains for your protein</small>
                <% end %>
              </div>
            </div>

            <div>
              <div class="flex items-start">
                <%= form.check_box :expression_testing, class: "mt-1 mr-3", id: "expression_testing" %>
                <%= form.label :expression_testing, class: "flex-1 cursor-pointer" do %>
                  <strong>Expression Testing & Optimization</strong>
                  <br>
                  <small class="text-gray-600">We'll test protein expression and optimize conditions</small>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-6">
          <%= form.label :notes, "Additional Notes (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :notes, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bio-green focus:border-bio-green transition-colors",
              placeholder: "Any special requirements, timeline constraints, or questions?" %>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mb-6">
          <h5 class="text-lg font-semibold mb-3">What happens next?</h5>
          <ol class="list-decimal list-inside space-y-1">
            <li>Submit your project details</li>
            <li>Our team will review and provide a quote within 24-48 hours</li>
            <li>Once approved, we'll begin work on your custom solution</li>
          </ol>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <% if authenticated? %>
            <%= form.submit "Submit Project", class: "inline-flex items-center justify-center px-6 py-3 bg-bio-green text-white font-medium rounded-lg hover:bg-bio-green-dark transition-colors" %>
            <%= link_to "Cancel", custom_projects_path, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-gray-400 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" %>
          <% else %>
            <%= link_to "Sign In to Submit Project", new_session_path, class: "inline-flex items-center justify-center px-6 py-3 bg-bio-green text-white font-medium rounded-lg hover:bg-bio-green-dark transition-colors" %>
            <%= link_to "Back to Home", root_path, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-gray-400 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>