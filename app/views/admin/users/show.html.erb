<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h2>User Details</h2>
        <div>
          <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-primary btn-sm" %>
          <%= link_to "Back to Users", admin_users_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">ID</dt>
          <dd class="col-sm-9"><%= @user.id %></dd>

          <dt class="col-sm-3">Email</dt>
          <dd class="col-sm-9"><%= @user.email_address %></dd>

          <dt class="col-sm-3">First Name</dt>
          <dd class="col-sm-9"><%= @user.first_name.presence || "-" %></dd>

          <dt class="col-sm-3">Last Name</dt>
          <dd class="col-sm-9"><%= @user.last_name.presence || "-" %></dd>

          <dt class="col-sm-3">Full Name</dt>
          <dd class="col-sm-9"><%= @user.full_name.presence || "-" %></dd>

          <dt class="col-sm-3">Role</dt>
          <dd class="col-sm-9">
            <% if @user.admin? %>
              <span class="badge bg-danger">Administrator</span>
            <% else %>
              <span class="badge bg-success">Customer</span>
            <% end %>
          </dd>

          <dt class="col-sm-3">Twist Username</dt>
          <dd class="col-sm-9"><%= @user.twist_username.presence || "-" %></dd>

          <dt class="col-sm-3">Created At</dt>
          <dd class="col-sm-9"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>

          <dt class="col-sm-3">Updated At</dt>
          <dd class="col-sm-9"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>

          <dt class="col-sm-3">2FA Status</dt>
          <dd class="col-sm-9">
            <% if @user.two_factor_enabled? %>
              <span class="badge bg-success">Enabled</span>
              <small class="text-muted ms-2">
                via <%= @user.otp_delivery_method&.upcase %>
                <% if @user.two_factor_confirmed_at %>
                  (since <%= @user.two_factor_confirmed_at.strftime("%b %d, %Y") %>)
                <% end %>
              </small>
            <% else %>
              <span class="badge bg-secondary">Disabled</span>
            <% end %>
          </dd>

          <dt class="col-sm-3">Phone Number</dt>
          <dd class="col-sm-9">
            <%= @user.phone_number.presence || "-" %>
            <% if @user.phone_verified? %>
              <span class="badge bg-success ms-2">Verified</span>
            <% end %>
          </dd>
        </dl>

        <hr class="my-4">

        <h5>Login Activity</h5>
        <div class="mb-3">
          <dl class="row mb-2">
            <dt class="col-sm-3">Total Logins</dt>
            <dd class="col-sm-9"><%= @user.login_count %></dd>

            <dt class="col-sm-3">Last Login</dt>
            <dd class="col-sm-9">
              <% if @user.last_login_at %>
                <%= @user.last_login_at.strftime("%B %d, %Y at %I:%M %p") %>
                <small class="text-muted">(<%= time_ago_in_words(@user.last_login_at) %> ago)</small>
              <% else %>
                <span class="text-muted">Never logged in</span>
              <% end %>
            </dd>
          </dl>
        </div>

        <% if @recent_sessions.any? %>
          <div class="card">
            <div class="card-header">
              <h6 class="mb-0">Recent Login History (Last 20)</h6>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-sm table-hover mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Date & Time</th>
                      <th>IP Address</th>
                      <th>Device / Browser</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @recent_sessions.each do |session| %>
                      <tr>
                        <td>
                          <%= session.created_at.strftime("%b %d, %Y %I:%M %p") %>
                          <br>
                          <small class="text-muted"><%= time_ago_in_words(session.created_at) %> ago</small>
                        </td>
                        <td>
                          <code><%= session.ip_address.presence || "Unknown" %></code>
                        </td>
                        <td>
                          <small><%= session.user_agent.presence || "Unknown" %></small>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No login history available for this user.
          </div>
        <% end %>

        <hr class="my-4">

        <h5>Associated Data</h5>
        <ul class="list-unstyled">
          <li>
            <strong>Cart Items:</strong> 
            <%= @user.cart&.cart_items&.count || 0 %>
          </li>
          <li>
            <strong>Subscriptions:</strong> 
            <%= @user.subscriptions.count %>
            <% if @user.has_active_subscription? %>
              <span class="badge bg-success ms-2">Active Subscription</span>
            <% end %>
          </li>
          <li>
            <strong>Custom Projects:</strong> 
            <%= @user.custom_projects.count %>
          </li>
          <li>
            <strong>Addresses:</strong> 
            <%= @user.addresses.count %>
          </li>
          <li>
            <strong>Orders:</strong> 
            <%= @user.orders.count %>
          </li>
        </ul>

        <% if @user != Current.user %>
          <hr class="my-4">
          <div class="d-flex justify-content-end">
            <%= button_to "Delete User", admin_user_path(@user), method: :delete, 
                data: { turbo_confirm: "Are you sure you want to delete this user? This will also delete all associated data (cart, subscriptions, projects, etc.)." }, 
                class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>