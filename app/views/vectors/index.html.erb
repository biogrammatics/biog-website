<h1>Vector Collection</h1>
<p class="lead">Browse our comprehensive collection of Pichia pastoris vectors for protein expression and genome engineering</p>

<% if @vectors.empty? %>
  <div class="alert alert-info" role="alert">
    No vectors are currently available. Please check back later.
  </div>
<% else %>
  <% @vectors_by_category.each do |category, vectors| %>
    <% if vectors.any? %>
      <section class="mb-5">
        <div class="d-flex align-items-center mb-4">
          <% if category == 'Heterologous Protein Expression' %>
            <i class="bi bi-diagram-3 fs-2 text-primary me-3"></i>
          <% else %>
            <i class="bi bi-gear-wide-connected fs-2 text-success me-3"></i>
          <% end %>
          <div>
            <h2 class="mb-1"><%= category %></h2>
            <p class="text-muted mb-0">
              <% if category == 'Heterologous Protein Expression' %>
                Vectors for expressing recombinant proteins in Pichia pastoris
              <% else %>
                Tools for genome modification and cellular engineering
              <% end %>
            </p>
          </div>
        </div>

        <div class="row">
          <% vectors.each do |vector| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100">
                <% if vector.map_image.attached? && vector.map_thumbnail %>
                  <%= link_to vector_path(vector) do %>
                    <%= image_tag vector.map_thumbnail, 
                                  class: "card-img-top",
                                  style: "height: 200px; object-fit: cover;",
                                  alt: "#{vector.name} vector map",
                                  loading: "lazy" %>
                  <% end %>
                <% end %>
                <div class="card-body d-flex flex-column">
                  <div class="d-flex align-items-start justify-content-between mb-2">
                    <h5 class="card-title mb-0"><%= vector.name %></h5>
                    <% if category == 'Genome Engineering' %>
                      <span class="badge bg-success">Engineering</span>
                    <% end %>
                  </div>
                  
                  <p class="card-text flex-grow-1"><%= truncate(vector.description, length: 120) %></p>
                  
                  <div class="mb-3">
                    <small class="text-muted">
                      <strong>Promoter:</strong> <%= vector.promoter&.name || "N/A" %><br>
                      <strong>Selection:</strong> <%= vector.selection_marker&.name || "N/A" %><br>
                      <strong>Size:</strong> <%= vector.vector_size ? "#{vector.vector_size} bp" : "N/A" %>
                      <% if vector.has_lox_sites? %>
                        <br><strong>Features:</strong> <span class="badge bg-warning text-dark">Lox sites</span>
                      <% end %>
                    </small>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center mt-auto">
                    <div>
                      <% if vector.sale_price %>
                        <strong class="text-success">$<%= vector.sale_price %></strong>
                      <% end %>
                      <% if vector.subscription_price %>
                        <br><small class="text-muted">Subscription: $<%= vector.subscription_price %></small>
                      <% end %>
                    </div>
                    <%= link_to "View Details", vector, class: "btn btn-sm btn-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
  <% end %>
<% end %>
