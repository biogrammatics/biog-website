<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Biog Website" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Tailwind CSS %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%# Legacy CSS (will phase out) %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%# Bootstrap Icons (keeping for now) %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  </head>

  <body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Modern Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="container-custom">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "flex items-center space-x-2" do %>
              <span class="text-2xl font-bold text-charcoal">BioGrammatics</span>
            <% end %>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-1">
            <%= link_to "Vectors", vectors_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors" %>
            <%= link_to "Strains", pichia_strains_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors" %>
            <%= link_to "Subscriptions", subscriptions_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors" %>

            <!-- Custom Services Dropdown -->
            <div class="relative dropdown">
              <button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors inline-flex items-center">
                Custom Services
                <i class="bi bi-chevron-down ml-1 text-xs"></i>
              </button>
              <div class="dropdown-menu">
                <%= link_to protein_expression_custom_projects_path, class: "dropdown-item" do %>
                  <i class="bi bi-diagram-3 mr-2"></i>Protein Expression
                <% end %>
                <%= link_to new_custom_project_path, class: "dropdown-item" do %>
                  <i class="bi bi-gear-wide-connected mr-2"></i>Other Custom Projects
                <% end %>
              </div>
            </div>

            <!-- Cart -->
            <%= link_to cart_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors relative inline-flex items-center" do %>
              <i class="bi bi-cart3 mr-1"></i>
              Cart
              <% if has_cart_items? %>
                <span class="badge absolute -top-1 -right-1"><%= current_cart_items_count %></span>
              <% end %>
            <% end %>

            <% if authenticated? %>
              <% if admin_signed_in? %>
                <!-- Admin Dropdown -->
                <div class="relative dropdown">
                  <button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors inline-flex items-center">
                    Admin
                    <i class="bi bi-chevron-down ml-1 text-xs"></i>
                  </button>
                  <div class="dropdown-menu">
                    <%= link_to admin_users_path, class: "dropdown-item" do %>
                      <i class="bi bi-people mr-2"></i>Manage Users
                    <% end %>
                    <div class="border-t border-gray-200 my-1"></div>
                    <%= link_to admin_vectors_path, class: "dropdown-item" do %>
                      <i class="bi bi-diagram-2 mr-2"></i>Manage Vectors
                    <% end %>
                    <%= link_to admin_pichia_strains_path, class: "dropdown-item" do %>
                      <i class="bi bi-droplet mr-2"></i>Manage Strains
                    <% end %>
                    <%= link_to admin_promoters_path, class: "dropdown-item" do %>
                      <i class="bi bi-toggles mr-2"></i>Manage Promoters
                    <% end %>
                    <%= link_to admin_selection_markers_path, class: "dropdown-item" do %>
                      <i class="bi bi-bookmark mr-2"></i>Manage Selection Markers
                    <% end %>
                    <div class="border-t border-gray-200 my-1"></div>
                    <%= link_to admin_custom_projects_path, class: "dropdown-item" do %>
                      <i class="bi bi-folder mr-2"></i>Manage Custom Projects
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- User Dropdown -->
              <div class="relative dropdown">
                <button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 transition-colors inline-flex items-center">
                  <i class="bi bi-person-circle mr-1"></i>
                  <%= Current.user.full_name.presence || Current.user.email_address.split('@').first %>
                  <i class="bi bi-chevron-down ml-1 text-xs"></i>
                </button>
                <div class="dropdown-menu right-0">
                  <%= link_to account_path, class: "dropdown-item" do %>
                    <i class="bi bi-gear mr-2"></i>Account
                  <% end %>
                  <div class="border-t border-gray-200 my-1"></div>
                  <%= button_to session_path, method: :delete, class: "dropdown-item w-full text-left border-0 bg-transparent" do %>
                    <i class="bi bi-box-arrow-right mr-2"></i>Sign Out
                  <% end %>
                </div>
              </div>
            <% else %>
              <%= link_to new_session_path, class: "btn-primary text-sm px-4 py-2" do %>
                Sign In
              <% end %>
            <% end %>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-bio-green hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-bio-green">
              <i class="bi bi-list text-2xl"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <%= link_to "Vectors", vectors_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
          <%= link_to "Strains", pichia_strains_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
          <%= link_to "Subscriptions", subscriptions_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
          <%= link_to "Protein Expression", protein_expression_custom_projects_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
          <%= link_to "Custom Projects", new_custom_project_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
          <%= link_to cart_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" do %>
            Cart
            <% if has_cart_items? %>
              <span class="badge ml-2"><%= current_cart_items_count %></span>
            <% end %>
          <% end %>

          <% if authenticated? %>
            <% if admin_signed_in? %>
              <div class="border-t border-gray-200 my-2"></div>
              <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Admin</div>
              <%= link_to "Manage Users", admin_users_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
              <%= link_to "Manage Vectors", admin_vectors_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
              <%= link_to "Manage Strains", admin_pichia_strains_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
              <%= link_to "Manage Custom Projects", admin_custom_projects_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
            <% end %>
            <div class="border-t border-gray-200 my-2"></div>
            <%= link_to "Account", account_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100" %>
            <%= button_to "Sign Out", session_path, method: :delete, class: "block w-full text-left px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-bio-green hover:bg-gray-100 border-0 bg-transparent" %>
          <% else %>
            <%= link_to "Sign In", new_session_path, class: "block px-3 py-2 rounded-md text-base font-medium bg-bio-green text-white hover:bg-bio-green-dark" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="mt-auto bg-white border-t border-gray-200">
      <div class="container-custom py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-gray-600 text-sm">&copy; <%= Date.current.year %> BioGrammatics. All rights reserved.</p>
          </div>
          <div class="flex flex-wrap gap-4 md:justify-end">
            <%= link_to "Privacy Policy", privacy_path, class: "text-gray-600 hover:text-bio-green text-sm transition-colors" %>
            <%= link_to "Cookie Policy", cookies_policy_path, class: "text-gray-600 hover:text-bio-green text-sm transition-colors" %>
            <a href="#" onclick="manageCookies(); return false;" class="text-gray-600 hover:text-bio-green text-sm transition-colors">Cookie Settings</a>
          </div>
        </div>
      </div>
    </footer>

    <%= render 'shared/cookie_banner' %>

    <!-- Navigation and dropdown scripts -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }

        // Desktop dropdown menus
        const dropdowns = document.querySelectorAll('.dropdown');

        dropdowns.forEach(dropdown => {
          const button = dropdown.querySelector('button');
          const menu = dropdown.querySelector('.dropdown-menu');

          if (button && menu) {
            // Toggle on click
            button.addEventListener('click', function(e) {
              e.stopPropagation();

              // Close other dropdowns
              document.querySelectorAll('.dropdown-menu.show').forEach(otherMenu => {
                if (otherMenu !== menu) {
                  otherMenu.classList.remove('show');
                }
              });

              // Toggle current dropdown
              menu.classList.toggle('show');
            });

            // Also show on hover for better UX
            dropdown.addEventListener('mouseenter', function() {
              menu.classList.add('show');
            });

            dropdown.addEventListener('mouseleave', function() {
              menu.classList.remove('show');
            });
          }
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
          if (!e.target.closest('.dropdown')) {
            document.querySelectorAll('.dropdown-menu.show').forEach(menu => {
              menu.classList.remove('show');
            });
          }
        });

        // Handle forms with data-turbo-confirm attribute
        document.addEventListener('submit', function(e) {
          const form = e.target;
          const confirmMessage = form.dataset.turboConfirm;
          if (confirmMessage && !confirm(confirmMessage)) {
            e.preventDefault();
            return false;
          }
        });
      });

      // Re-initialize dropdowns after Turbo navigation
      document.addEventListener('turbo:load', function() {
        const event = new Event('DOMContentLoaded');
        document.dispatchEvent(event);
      });
    </script>
  </body>
</html>
