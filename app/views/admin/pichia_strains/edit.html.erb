<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Edit Pichia Strain: <%= @pichia_strain.name %></h1>
  <div class="flex space-x-2">
    <%= link_to "View Strain", admin_pichia_strain_path(@pichia_strain), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= link_to "â† Back to Strains", admin_pichia_strains_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>

<div class="bg-white shadow-sm rounded-lg border border-gray-200">
  <div class="px-6 py-4">
    <%= form_with model: [:admin, @pichia_strain], local: true, class: "space-y-6" do |form| %>
      <% if @pichia_strain.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@pichia_strain.errors.count, "error") %> prohibited this strain from being saved:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @pichia_strain.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :strain_type_id, "Strain Type", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :strain_type_id, @strain_types, :id, :name, { prompt: "Select strain type..." }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        </div>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :genotype, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :genotype, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :phenotype, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :phenotype, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.label :advantages, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :advantages, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :applications, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :applications, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :sale_price, "Sale Price ($)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :sale_price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :availability, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :availability,
              options_for_select([
                ['In Stock', 'In Stock'],
                ['Out of Stock', 'Out of Stock'],
                ['Backordered', 'Backordered'],
                ['Discontinued', 'Discontinued']
              ], @pichia_strain.availability),
              { prompt: "Select availability..." },
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :shipping_requirements, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :shipping_requirements, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :storage_conditions, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :storage_conditions, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :viability_period, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :viability_period, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :product_status_id, "Product Status", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :product_status_id, @product_statuses, :id, :name, { prompt: "Select status..." }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        </div>
      </div>

      <div>
        <%= form.label :culture_media, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :culture_media, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :growth_conditions, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :growth_conditions, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :citations, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :citations, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-center">
          <%= form.check_box :has_files, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :has_files, "Has Files Available", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div>
          <%= form.label :file_notes, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :file_notes, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <div class="flex space-x-3">
          <%= form.submit "Update Pichia Strain", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <%= link_to "Cancel", admin_pichia_strain_path(@pichia_strain), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
