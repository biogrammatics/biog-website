<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900"><%= @pichia_strain.name %></h1>
  <div class="flex space-x-2">
    <%= link_to "Edit Strain", edit_admin_pichia_strain_path(@pichia_strain), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= link_to "â† Back to Strains", admin_pichia_strains_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Strain Details</h3>
      </div>
      <div class="px-6 py-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-900"><strong>Name:</strong> <%= @pichia_strain.name %></p>
            <p class="text-sm text-gray-900"><strong>Strain Type:</strong> <%= @pichia_strain.strain_type&.name || "Not specified" %></p>
            <p class="text-sm text-gray-900"><strong>Genotype:</strong> <%= @pichia_strain.genotype || "Not specified" %></p>
            <p class="text-sm text-gray-900"><strong>Phenotype:</strong> <%= @pichia_strain.phenotype || "Not specified" %></p>
          </div>

          <div>
            <p class="text-sm text-gray-900"><strong>Sale Price:</strong> <%= @pichia_strain.sale_price ? "$#{@pichia_strain.sale_price}" : "Not specified" %></p>
            <p class="text-sm text-gray-900"><strong>Availability:</strong>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @pichia_strain.availability == 'In Stock' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @pichia_strain.availability || "Unknown" %>
              </span>
            </p>
            <p class="text-sm text-gray-900"><strong>Has Files:</strong>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @pichia_strain.has_files? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @pichia_strain.has_files? ? 'Yes' : 'No' %>
              </span>
            </p>
          </div>
        </div>

        <% if @pichia_strain.description.present? %>
          <hr class="my-4 border-gray-200">
          <h5 class="font-semibold text-gray-900 mb-2">Description</h5>
          <p class="text-sm text-gray-700"><%= simple_format(@pichia_strain.description) %></p>
        <% end %>

        <% if @pichia_strain.advantages.present? %>
          <hr class="my-4 border-gray-200">
          <h5 class="font-semibold text-gray-900 mb-2">Advantages</h5>
          <p class="text-sm text-gray-700"><%= simple_format(@pichia_strain.advantages) %></p>
        <% end %>

        <% if @pichia_strain.applications.present? %>
          <hr class="my-4 border-gray-200">
          <h5 class="font-semibold text-gray-900 mb-2">Applications</h5>
          <p class="text-sm text-gray-700"><%= simple_format(@pichia_strain.applications) %></p>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Culture & Storage Information</h3>
      </div>
      <div class="px-6 py-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <% if @pichia_strain.culture_media.present? %>
              <p class="text-sm text-gray-900"><strong>Culture Media:</strong> <%= @pichia_strain.culture_media %></p>
            <% end %>
            <% if @pichia_strain.growth_conditions.present? %>
              <p class="text-sm text-gray-900"><strong>Growth Conditions:</strong> <%= @pichia_strain.growth_conditions %></p>
            <% end %>
            <% if @pichia_strain.viability_period.present? %>
              <p class="text-sm text-gray-900"><strong>Viability Period:</strong> <%= @pichia_strain.viability_period %></p>
            <% end %>
          </div>
          <div>
            <% if @pichia_strain.storage_conditions.present? %>
              <p class="text-sm text-gray-900"><strong>Storage Conditions:</strong> <%= @pichia_strain.storage_conditions %></p>
            <% end %>
            <% if @pichia_strain.shipping_requirements.present? %>
              <p class="text-sm text-gray-900"><strong>Shipping Requirements:</strong> <%= @pichia_strain.shipping_requirements %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if @pichia_strain.citations.present? %>
      <div class="bg-white shadow-sm rounded-lg border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Citations</h3>
        </div>
        <div class="px-6 py-4">
          <p class="text-sm text-gray-700"><%= simple_format(@pichia_strain.citations) %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="space-y-6">
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Status</h3>
      </div>
      <div class="px-6 py-4">
        <p class="text-sm text-gray-900"><strong>Product Status:</strong>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @pichia_strain.available? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
            <%= @pichia_strain.product_status&.name || "Unknown" %>
          </span>
        </p>

        <% if @pichia_strain.file_notes.present? %>
          <hr class="my-4 border-gray-200">
          <p class="text-sm text-gray-900"><strong>File Notes:</strong></p>
          <p class="text-sm text-gray-500 mt-1"><%= simple_format(@pichia_strain.file_notes) %></p>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h4 class="text-lg font-semibold text-gray-900">Admin Actions</h4>
      </div>
      <div class="px-6 py-4 space-y-3">
        <%= link_to "Edit Strain", edit_admin_pichia_strain_path(@pichia_strain), class: "block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "View Public Page", pichia_strain_path(@pichia_strain), class: "block w-full text-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>
        <%= button_to "Delete Strain", admin_pichia_strain_path(@pichia_strain),
                    method: :delete,
                    class: "block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                    data: {
                      turbo_confirm: "Are you sure you want to delete this strain? This action cannot be undone."
                    } %>
      </div>
    </div>
  </div>
</div>
