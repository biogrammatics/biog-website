<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= @vector.name %></h1>
  <div class="flex space-x-2">
    <%= link_to "Edit Vector", edit_admin_vector_path(@vector), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= link_to "â† Back to Vectors", admin_vectors_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2">
    <div class="bg-white shadow-sm rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Vector Details</h3>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Category</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.category || "Not specified" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-700"><%= simple_format(@vector.description) if @vector.description.present? %></dd>
              </div>
            </dl>
          </div>

          <div>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Vector Size</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.vector_size ? "#{@vector.vector_size} bp" : "Not specified" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">File Version</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.file_version || "Not specified" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Has Lox Sites</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @vector.has_lox_sites? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= @vector.has_lox_sites? ? 'Yes' : 'No' %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Has Files</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @vector.has_files? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= @vector.has_files? ? 'Yes' : 'No' %>
                  </span>
                </dd>
              </div>
            </dl>
          </div>
        </div>

        <% if @vector.features.present? %>
          <div class="border-t border-gray-200 mt-6 pt-6">
            <h5 class="text-sm font-medium text-gray-900 mb-2">Features</h5>
            <div class="text-sm text-gray-700"><%= simple_format(@vector.features) %></div>
          </div>
        <% end %>
      </div>
    </div>


    <div class="bg-white shadow-sm rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Components</h3>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Promoter</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.promoter&.name || "Not specified" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Selection Marker</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.selection_marker&.name || "Not specified" %></dd>
              </div>
            </dl>
          </div>
          <div>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Vector Type</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.vector_type&.name || "Not specified" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Host Organism</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @vector.host_organism&.common_name || "Not specified" %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="lg:col-span-1">
    <div class="bg-white shadow-sm rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Status & Pricing</h3>
      </div>
      <div class="px-6 py-6">
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Product Status</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @vector.available? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @vector.product_status&.name || "Unknown" %>
              </span>
            </dd>
          </div>
        </dl>

        <div class="border-t border-gray-200 my-4"></div>

        <div class="space-y-3">
          <div>
            <label class="text-sm font-medium text-gray-700">Sale Options</label>
            <div class="mt-2 flex items-center">
              <input type="checkbox" <%= 'checked' if @vector.available_for_sale? %> disabled class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
              <span class="ml-2 text-sm text-gray-700">Available for Sale</span>
            </div>
            <% if @vector.sale_price %>
              <div class="mt-1 ml-6 text-sm font-semibold text-green-600">$<%= @vector.sale_price %></div>
            <% end %>
          </div>

          <div>
            <div class="flex items-center">
              <input type="checkbox" <%= 'checked' if @vector.available_for_subscription? %> disabled class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
              <span class="ml-2 text-sm text-gray-700">Available for Subscription</span>
            </div>
            <% if @vector.subscription_price %>
              <div class="mt-1 ml-6 text-sm font-semibold text-blue-600">$<%= @vector.subscription_price %>/year</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <div class="bg-white shadow-sm rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h4 class="text-base font-semibold text-gray-900">Attached Files</h4>
      </div>
      <div class="px-6 py-6">
        <% if @vector.files.attached? %>
          <ul class="divide-y divide-gray-200">
            <% @vector.files.each do |file| %>
              <li class="py-3 flex justify-between items-center">
                <div>
                  <svg class="inline-block w-4 h-4 text-gray-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-900"><%= file.filename %></span>
                  <span class="text-xs text-gray-500 ml-1">(<%= number_to_human_size(file.byte_size) %>)</span>
                  <span class="text-xs text-gray-500 ml-2">Uploaded <%= file.created_at.strftime("%B %d, %Y") %></span>
                </div>
                <%= link_to "Download",
                            rails_blob_path(file, disposition: "attachment"),
                            class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm text-gray-500">No files attached. <%= link_to "Edit vector", edit_admin_vector_path(@vector), class: "text-blue-600 hover:text-blue-900" %> to upload files.</p>
        <% end %>
      </div>
    </div>


    <div class="bg-white shadow-sm rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h4 class="text-base font-semibold text-gray-900">Purchase & Usage Status</h4>
      </div>
      <div class="px-6 py-6">
        <% if @vector.has_been_purchased? %>
          <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-blue-700"><strong>Protected Vector:</strong> This vector has been purchased by <%= @vector.purchase_count %> customer(s) and cannot be deleted.</p>
              </div>
            </div>
          </div>
        <% end %>

        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Purchase Count</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= @vector.purchase_count %> purchases</span>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">In Subscriptions</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @vector.in_subscriptions? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @vector.in_subscriptions? ? 'Yes' : 'No' %>
              </span>
            </dd>
          </div>

          <% if @vector.file_version.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Current Version</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">v<%= @vector.file_version %></span>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>


    <div class="bg-white shadow-sm rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h4 class="text-base font-semibold text-gray-900">Admin Actions</h4>
      </div>
      <div class="px-6 py-6">
        <div class="space-y-2">
          <%= link_to "Edit Vector", edit_admin_vector_path(@vector), class: "block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= link_to "View Public Page", vector_path(@vector), class: "block w-full text-center px-4 py-2 border border-blue-300 text-sm font-medium rounded-md shadow-sm text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>

          <% if @vector.can_be_deleted? %>
            <%= button_to "Delete Vector", admin_vector_path(@vector),
                        method: :delete,
                        class: "block w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                        form: { data: { turbo_confirm: "Are you sure you want to delete this vector? This action cannot be undone." } } %>
          <% else %>
            <button class="w-full px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-400 bg-gray-100 cursor-not-allowed" disabled title="Cannot delete - vector has been purchased or is in subscriptions">
              <svg class="inline-block w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
              Delete Vector (Protected)
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
